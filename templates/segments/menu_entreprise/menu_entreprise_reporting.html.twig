                    <span class="mb-0">&nbsp;&nbsp;{{ include('segments/icones/feedback.html.twig', {'size':'18px'}) }} {{ "company_menu_claims" | trans }}</span>
                </div>
            </a>
            <a href="#" class="list-group-item list-group-item-action {{ app.current_route starts with 'admin.entreprise.cashflow'? 'active' : '' }}">
