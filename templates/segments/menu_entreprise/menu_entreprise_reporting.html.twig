        <div class="list-group list-group-flush p-1 border-0 accordion-body">
            <a href="#" class="list-group-item list-group-item-action  {{ app.current_route starts with 'admin.entreprise.retrocommission' ? 'active' : '' }}">
                <div class="d-flex justify-content-between">
                    <span class="mb-0">&nbsp;&nbsp;{{ include('segments/icones/feedback.html.twig', {'size':'18px'}) }} {{ "company_menu_retrocom" | trans }}</span>
                </div>
            </a>
