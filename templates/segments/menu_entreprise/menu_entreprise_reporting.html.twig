<div class="accordion-item">
    <h2 class="accordion-header" id="menuReporting">
        <button class="accordion-button {{ activator.isCollapsed(5) }}" type="button" data-bs-toggle="collapse" data-bs-target="#collapsemenuReporting" aria-expanded="{{ activator.canExpand(5) }}" aria-controls="collapsemenuReporting">
            {{ ux_icon('mdi:report-bar', {height: '16px', width: '16px'}) }}
            <strong>&nbsp;{{ "company_menu_group_reporting" | trans }}&nbsp;</strong>
        </button>
    </h2>
