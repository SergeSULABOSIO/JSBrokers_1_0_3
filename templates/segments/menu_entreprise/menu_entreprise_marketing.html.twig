        <button class="accordion-button collapsed bg-secondary text-white" type="button" data-bs-toggle="collapse" data-bs-target="#collapsemenuMarketing" aria-expanded="false" aria-controls="collapsemenuMarketing">
            {{ ux_icon('gravity-ui:dots-9', {height: '16px', width: '16px'}) }}
            <strong>&nbsp;{{ "company_menu_group_marketing" | trans }}&nbsp;</strong>
        </button>
