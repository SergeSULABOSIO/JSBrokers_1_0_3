<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}
				{{ "base_welcome" | trans }}
			{% endblock %}
		</title>
		<link rel="icon" type="image/png" href="{{ asset('images/entreprises/logofav.png') }}">
		{# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> #}
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{# Conteneur pour le corps de la page #}
		{% block body %}{% endblock %}
		{# Conteneur pour les notifications (toasts) #}
		<div 
			aria-live="polite" 
			aria-atomic="true" 
			class="position-fixed top-0 end-0 p-3" 
			style="z-index: 1100"
			data-controller="notification-manager"
		>
			{# Les toasts seront injectés ici par Stimulus #}
		</div>

		{# LA QUOQUE DE LA BOITE DE DIALOGUE #}
		<div data-controller="form-dialog" class="modal fade" tabindex="-1" id="form-dialog-modal">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <form data-action="submit->form-dialog#submitForm">
                        <div class="modal-header">
                            <h5 class="modal-title" data-form-dialog-target="title">Chargement...</h5>
                            <button type="button" class="btn-close btn-close-white" data-action="click->form-dialog#close"></button>
                        </div>
                        <div class="modal-body" data-form-dialog-target="formBody"></div>
                        <div class="modal-footer">
                            <div class="feedback-container me-auto" data-form-dialog-target="feedback"></div>
                            <button type="button" class="btn btn-secondary" data-action="click->form-dialog#close">Annuler</button>
                            <button type="submit" class="btn btn-primary" data-form-dialog-target="submitButton">
                                <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true" style="display: none;"></span>
                                Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
		{# FIN DE LA QUOQUE DE LA BOITE DE DIALOGUE #}
	</body>
</html>
