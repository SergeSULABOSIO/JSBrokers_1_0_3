<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				{{ "base_welcome" | trans }}
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> {% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{# Barre d'outils #}
		<nav class="navbar navbar-expand-lg bg-body-tertiary shadow-sm bg-body">
			<div
				class="container-fluid justify-content-between">
				{# <img src="/docs/5.3/assets/brand/bootstrap-logo.svg" alt="Logo" width="30" height="24" class="d-inline-block align-text-top"> #}
				<a class="navbar-brand" href="{{ url('app_index')}}">
					<strong>JS Brokers</strong>
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">
						<li class="nav-item">
							<a class="nav-link" href="#">{{ "base_tutoriels" | trans }}</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="#">{{ "base_tarif" | trans }}</a>
						</li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								{{ "base_actions" | trans }}
							</a>
							<ul class="dropdown-menu">
								<li>
									<a class="dropdown-item" href="{{ path('app_register', {idUtilisateur:-1})}}">
										{% if app.user %}
											{{ ux_icon('material-symbols:settings', {height: '18px', width: '18px'}) }}
											{{ "base_my_account_parameters" | trans }}
										{% else %}
											{{ ux_icon('gridicons:add', {height: '18px', width: '18px'}) }}
											{{ "base_new_account" | trans }}
										{% endif %}
									</a>
								</li>
								<li>
									<a class="dropdown-item" href="{{ path('app_login')}}">
										{% if app.user %}
											{{ ux_icon('streamline:store-computer', {height: '18px', width: '18px'}) }}
											{{ "base_mon_espace" | trans }}
										{% else %}
											{{ ux_icon('simple-icons:simplelogin', {height: '18px', width: '18px'}) }}
											{{ "base_connexion" | trans }}
										{% endif %}
									</a>
								</li>
								<li>
									<a class="dropdown-item" href="#">
										{{ ux_icon('clarity:license-solid', {height: '18px', width: '18px'}) }}
										{{ "base_ma_licence" | trans }}
									</a>
								</li>
								<li><hr class="dropdown-divider"></li>
								<li>
									<a class="dropdown-item" href="{{ path('admin.demande.contact.index')}}">
										{{ ux_icon('grommet-icons:contact', {height: '18px', width: '18px'}) }}
										{{ "base_nous_contacter" | trans }}
									</a>
								</li>
							</ul>
						</li>
					</ul>
				</div>
				{% block section_utilisateur %}
					{% if app.user %}
						<span class="btn border-0 btn-outline-secondary">
							{{ ux_icon('si:user-duotone', {height: '18px', width: '18px'}) }}
							<strong class='m-1'> {{ app.user.nom }} </strong>
						</span>
						{{ include('./segments/boutons_user_dashbord.html.twig') }}
					{% endif %}				
				{% endblock %}
			</div>
		</nav>

		{# Barre d'Alert #}
		<div class="container">
			<p>
				{% include 'home/flash.html.twig' %}
			</p>
		</div>

		{# Contenu de la page #}
		{% block contenuPage %}
			<div class="container">
				{# Lite de la page #}
				<p>
					<h6>
						<span class="fst-italic text-body-tertiary">
							{% block titreRubrique %}{% endblock %}
						</span>
					</h6>
					{% block descriptionRubrique %}{% endblock %}
				</p>
				{# Corps de la page #}
				<div class="row d-flex">
					{# Menu de Gauche #}
					<div class="col-2">
						{% block menuLateraleGauche %}{% endblock %}
					</div>
					{# Contenu de droite #}
					<div class="col">
						{% block body %}{% endblock %}
					</div>
				</div>
			</div>

			{# bas de la page #}
			<div class="row bottom p-3">
				<div class="col text-center">
					{{ "base_base_de_page" | trans }}
				</div>
			</div>
		{% endblock %}
	</body>
</html>
