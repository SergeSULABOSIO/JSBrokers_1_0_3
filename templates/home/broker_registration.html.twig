{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{ pageName }}</h1>
		<p>
			<strong>{{ utilisateur.nom }}</strong>, vous êtes sur le point de créer une entreprise. Merci de fournir vos informations dans le formulaire ci-dessous.
		</p>
		<p>
			{# {{ form(form) }} #}
			{{ form_start(form) }}
			<div class='row'>
				<div class='col-sm'>{{ form_row(form.nom) }}</div>
			</div>
            <div class='row'>
				<div class='col-sm col-6'>{{ form_row(form.adresse) }}</div>
				<div class='col-sm col-6'>{{ form_row(form.telephone) }}</div>
			</div>
            <div class='row'>
				<div class='col-sm'>{{ form_row(form.rccm) }}</div>
				<div class='col-sm'>{{ form_row(form.idnat) }}</div>
                <div class='col-sm'>{{ form_row(form.numimpot) }}</div>
			</div>
			{{ form_end(form) }}
		</p>
	</div>
{% endblock %}
