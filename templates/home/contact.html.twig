{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block body %}
	<div class="container">
		<h1>{{ pageName }}</h1>
		<div class="card m-2 shadow-sm bg-body" style="width: 40rem;">
			<div class="card-body">
				{{ form_start(form) }}
				<div class='row'>
					<div class='col-sm'>{{ form_row(form.name) }}</div>
					<div class='col-sm'>{{ form_row(form.email) }}</div>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
</div>{% endblock %}
