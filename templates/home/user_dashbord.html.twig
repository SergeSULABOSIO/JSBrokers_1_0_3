{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_user_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ pageName }}
{% endblock %}

{% block descriptionRubrique %}
	Liste des entreprises de votre protefeuil, y compris les celles auxquelles vous êtes invité.
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_user_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex">
			{# Boucler les entreprises #}
			{% for entreprise in entreprises %}
				<div class="card m-2 shadow-sm bg-body" style="width: 18rem;">
					{# <img class="card-img-top" src="..." alt="Card image cap"> #}
					<div class="card-body">
						<h5 class="card-title">
							<a href="#" class="text-primary">{{ entreprise.nom }}</a>
						</h5>
						<p class="card-text">{{ entreprise.adresse }}</p>
					</div>
					<ul class="list-group list-group-flush">
						<li class="list-group-item">RCCM: {{ entreprise.rccm }}| IDNAT: {{ entreprise.idnat }} | NIF:{{ entreprise.numimpot }}</li>
						<li class="list-group-item">Tél:{{ entreprise.telephone }} | Lince: {{ entreprise.licence }} </li>
						<li class="list-group-item">
							<em>Créée le {{ entreprise.createdAt | date("d/m/Y") }}</em>
						</li>
					</ul>
					<div class="card-body">
						<a href="#" class="m-2">Inviter</a>
						<a href="{{ path('app_broker_registration', { 'idUtilisateur':utilisateur.id, 'idEntreprise':entreprise.id })}}" class="m-2">Modifier</a>
						<a href="{{ path('app_broker_destruction', { 'idUtilisateur':utilisateur.id, 'idEntreprise':entreprise.id })}}" class="m-2">Supprimer</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
