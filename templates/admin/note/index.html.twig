{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "note_description" | trans }}
	{% include 'segments/panier_pour_note.html.twig' %}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex">
			<table class="table table-hover table-sm caption-top shadow-sm p-3">
				<caption>
					{% if notes|length == 0 %}
						{{ "note_filter_result_empty" | trans}}
					{% else %}
						{{ "note_filter_result_elements" | trans({
							':number': notes|length
						})}}
					{% endif %}
					<div class="d-flex gap-1">
						{{ knp_pagination_render(notes) }}
					</div>
				</caption>
				{% if notes|length != 0 %}
					<thead class="table-light">
						<tr>
							<th scope="col"><div class='d-flex justify-content-start'>{{ "note_list_title" | trans }}</div></th>
							<th scope="col" style="width:100px" ><div class='d-flex justify-content-end'>{{ "note_list_actions" | trans }}</div></th>
						</tr>
					</thead>
					<tbody class="table-group-divider">
						{# Boucler les donnees #}
						{% for note in notes %}
							<tr id="row_note_{{ note.id }}" class="element-a-encadrer">
								<td>
									<a class="m-2 fw-bold" href="{{ path('admin.note.edit', {'page':1, 'idNote':note.id, 'idEntreprise': entreprise.id})}}">
										{{ include('segments/icones/note.html.twig', {size:'18px'}) }}
										{% if panier != null %}
											{% if panier.containsNote(note.id) == true %}
												{{ include('segments/icones/actions/panier.html.twig', {size:'18px'}) }}
											{% endif %}
										{% endif %}
										Réf.: {{ note.reference }} • {{ note.description }} • {{ constante.Note_getNameOfAddressedTo(note) }}
									</a><br/>
									<small class ="m-2">
                                    	<span class="text-secondary fw-bold">Montant dû: {{ constante.Note_getMontant_payable(note)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    	<span class="text-secondary"> • Montant payé: {{ constante.Note_getMontant_paye(note)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    	{% set couleur = "text-secondary" %}
										{% if constante.Note_getMontant_solde(note) != 0 %}
                                    		{% set couleur = "text-danger" %}
										{% endif %}
										<span class="{{couleur}}"> • Solde: {{ constante.Note_getMontant_solde(note)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
									</small><br/>
									<small class ="m-2">
										<span class="text-secondary">
											{{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
											{{ constante.Note_getNameOfTypeNote(note) }} - {{ note.nom }}
										</span>
									</small><br/>
									<small class ="m-2">
										<span class="text-secondary">
											{{ include('segments/icones/invite.html.twig', {size:'10px'}) }}
											Signée par {{ note.signedBy }}, {{ note.titleSignedBy }}
										</span>
									</small>
								</td>
								<td>
									<div class="d-flex gap-1 d-flex justify-content-end">
										{# Les actions sur l element de la liste #}
										<a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.note.edit', {'idEntreprise': entreprise.id, 'idNote':note.id, 'page':1 })}}" class="" mthod = 'POST'>
                							{{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
											{# Modifier #}
										</a>
										<form action="{{ path('admin.note.remove', {'idNote':note.id, 'idEntreprise': entreprise.id})}}" method='POST'>
											<input type='hidden' name='_method' value='DELETE'>
											<button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                								{{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
												{# Supprimer #}
											</button>
										</form>
										<div class="dropdown">
											<a class="btn btn-outline-secondary dropdown-toggle border-0 btn-sm" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
												{{ include('segments/icones/actions/options.html.twig', {size:'18px'}) }}
												{# Autres #}
											</a>
											<ul class="dropdown-menu">
												{% set currentURL = absolute_url(path(app.current_route, app.request.attributes.get('_route_params'))) %}
												{% if panier != null %}
													{% if panier.idNote != note.id %}
														<li>
															<a class="dropdown-item" href="{{ path('admin.note.mettredanslepanier', {'idNote': note.id, 'idEntreprise': entreprise.id, 'currentURL': currentURL})}}">
																{{ include('segments/icones/actions/panier.html.twig', {size:'18px'}) }}
																Mettre dans le panier
															</a>
														</li>
													{% else %}
														<li>
															<a class="dropdown-item" href="{{ path('admin.note.retirerdupanier', {'idNote': note.id, 'idEntreprise': entreprise.id, 'currentURL': currentURL})}}">
																{{ include('segments/icones/actions/panier.html.twig', {size:'18px'}) }}
																Retirer du panier
															</a>
														</li>
													{% endif %}
												{% else %}
													<li>
														<a class="dropdown-item" href="{{ path('admin.note.mettredanslepanier', {'idNote': note.id, 'idEntreprise': entreprise.id, 'currentURL': currentURL})}}">
															{{ include('segments/icones/actions/panier.html.twig', {size:'18px'}) }}
															Créer le panier puis insérer cette note
														</a>
													</li>
												{% endif %}
												<li>
													{% if constante.Note_getMontant_solde(note) != 0 %}
														<a class="dropdown-item" href="{{ path('admin.paiement.create', {'idNote': note.id, 'idEntreprise': entreprise.id})}}">
															{{ include('segments/icones/paiement.html.twig', {size:'18px'}) }}
															Ajouter un paiement
														</a>
													{% endif %}
												</li>
												<li>
													<a class="dropdown-item" href="{{ path('admin.etats.imprimer_note', {'idNote': note.id, 'idEntreprise': entreprise.id, 'currentURL': currentURL})}}">
														{{ include('segments/icones/note.html.twig', {size:'18px'}) }}
														Ouvrir la note
													</a>
												</li>
												<li>
													<a class="dropdown-item" href="{{ path('admin.etats.imprimer_bordereau_note', {'idNote': note.id, 'idEntreprise': entreprise.id, 'currentURL': currentURL})}}">
														{{ include('segments/icones/bordereau.html.twig', {size:'18px'}) }}
														Ouvrir le bordereau
													</a>
												</li>
											</ul>
										</div>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				{% endif %}
			</table>
		</div>
	</div>
{% endblock %}
