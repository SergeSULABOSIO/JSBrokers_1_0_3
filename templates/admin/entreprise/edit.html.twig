{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ "entreprise_page_name_list" | trans }}>{{ pageName }}><strong>{{ entreprise.nom }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "entreprise_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_user_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="card shadow-sm bg-body" style="width: 50rem;">
			<div class="card-body p-3">
				<p>
					{{ "entreprise_edition_description_message" | trans({
						':user': utilisateur.nom,
						':company': entreprise.nom,
					}) | raw }}
				</p>
				<p class="d-flex justify-content-center">
					{% if entreprise.thumbnail %}
						<img class="rounded" src="{{ vich_uploader_asset(entreprise, 'thumbnailFile') }}" alt="" width="620px" height="300px">
					{% else %}
						<img class="rounded" src="/images/entreprises/default_entreprise.jpg" alt="Image de l'entreprise" width="620px" height="300px">
					{% endif %}
				</p>
				<hr>
				{# Tableau d'onglets #}
				{# Barre de navigation #}
				{{ form_start(form) }}
				<p class = "m-2">
					<div>
						<div class="row">
							<div class="col">
								{{ form_row(form.nom) }}
							</div>
						</div>
						<div class="row">
							<div class="col">
								{{ form_row(form.thumbnailFile) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md">
								{{ form_row(form.adresse) }}
							</div>
							<div class="col-md">
								{{ form_row(form.telephone) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md">
								{{ form_row(form.licence) }}
							</div>
							<div class="col-md">
								{{ form_row(form.rccm) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md">
								{{ form_row(form.idnat) }}
							</div>
							<div class="col-md">
								{{ form_row(form.numimpot) }}
							</div>
						</div>
					</div>
				</p>
				<p>
				Autres paramètres indispensables pour le bon fonctionnement de l'espace de travail <strong>{{ entreprise.nom }}</strong>.
				</p>
				<nav>
					<div class="nav nav-tabs" id="nav-tab" role="tablist">
						<button class="nav-link active" id="nav-classeurs-tab" data-bs-toggle="tab" data-bs-target="#nav-classeurs" type="button" role="tab" aria-controls="nav-classeurs" aria-selected="false">
							{{ ux_icon('fluent:tab-desktop-28-regular', {height: '20px', width: '20px'}) }}
							Classeurs
						</button>
						<button class="nav-link" id="nav-assureurs-tab" data-bs-toggle="tab" data-bs-target="#nav-assureurs" type="button" role="tab" aria-controls="nav-assureurs" aria-selected="false">
							{{ ux_icon('fluent:tab-desktop-28-regular', {height: '20px', width: '20px'}) }}
							Assureurs
						</button>
						<button class="nav-link" id="nav-production-insurer-tab" data-bs-toggle="tab" data-bs-target="#nav-production-insurer" type="button" role="tab" aria-controls="nav-production-insurer" aria-selected="false">
							{{ ux_icon('fluent:tab-desktop-28-regular', {height: '20px', width: '20px'}) }}
							Monnaies
						</button>
						<button class="nav-link" id="nav-comptes-tab" data-bs-toggle="tab" data-bs-target="#nav-comptes" type="button" role="tab" aria-controls="nav-comptes" aria-selected="true">
							{{ ux_icon('fluent:tab-desktop-28-regular', {height: '20px', width: '20px'}) }}
							Comptes
						</button>
						<button class="nav-link" id="nav-modelePieceSinistres-tab" data-bs-toggle="tab" data-bs-target="#nav-modelePieceSinistres" type="button" role="tab" aria-controls="nav-modelePieceSinistres" aria-selected="true">
							{{ ux_icon('fluent:tab-desktop-28-regular', {height: '20px', width: '20px'}) }}
							Pièces
						</button>
						<button class="nav-link" id="nav-partenaires-tab" data-bs-toggle="tab" data-bs-target="#nav-partenaires" type="button" role="tab" aria-controls="nav-partenaires" aria-selected="true">
							{{ ux_icon('fluent:tab-desktop-28-regular', {height: '20px', width: '20px'}) }}
							Partenaires
						</button>
					</div>
				</nav>
				{# Contenu de chaque Onglet #}
				<div class="tab-content p-2" id="nav-tabContent">
					<div class="tab-pane fade show active" id="nav-classeurs" role="tabpanel" aria-labelledby="nav-classeurs-tab" tabindex="0">
						{{ form_widget(form.classeurs) }}
					</div>
					<div class="tab-pane fade" id="nav-assureurs" role="tabpanel" aria-labelledby="nav-assureurs-tab" tabindex="0">
						{{ form_widget(form.assureurs) }}
					</div>
					<div class="tab-pane fade" id="nav-production-insurer" role="tabpanel" aria-labelledby="nav-production-insurer-tab" tabindex="0">
						{{ form_widget(form.monnaies) }}
					</div>
					<div class="tab-pane fade" id="nav-comptes" role="tabpanel" aria-labelledby="nav-comptes-tab" tabindex="0">
						{{ form_widget(form.compteBancaires) }}
					</div>
					<div class="tab-pane fade" id="nav-modelePieceSinistres" role="tabpanel" aria-labelledby="nav-modelePieceSinistres-tab" tabindex="0">
						{{ form_widget(form.modelePieceSinistres) }}
					</div>
					<div class="tab-pane fade" id="nav-partenaires" role="tabpanel" aria-labelledby="nav-partenaires-tab" tabindex="0">
						{{ form_widget(form.partenaires) }}
					</div>
				</div>
				{{ form_widget(form.enregistrer) }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}