{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ "entreprise_page_name_list" | trans }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "entreprise_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_user_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		{# {{ form(form) }} #}
		<div class="card shadow-sm bg-body" style="width: 40rem;">
			<div class="card-body">
				<p>
					{{ "entreprise_creation_description_message" | trans({
						':user': utilisateur.nom
					}) | raw }}
				</p>
				<p class="d-flex justify-content-center">
					<img class="rounded" src="/images/entreprises/default_entreprise.jpg" alt="Image de l'entreprise" width="620px" height="300px">
				</p>
				<hr>
				{# {{ form(form) }} #}
				{# Tableau d'onglets #}
				{# Barre de navigation #}
				{{ form_start(form) }}
				<p class = "m-2">
					<div>
						<div class="row">
							<div class="col">
								{{ form_row(form.nom) }}
							</div>
						</div>
						<div class="row">
							<div class="col">
								{{ form_row(form.thumbnailFile) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md">
								{{ form_row(form.adresse) }}
							</div>
							<div class="col-md">
								{{ form_row(form.telephone) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md">
								{{ form_row(form.licence) }}
							</div>
							<div class="col-md">
								{{ form_row(form.rccm) }}
							</div>
						</div>
						<div class="row">
							<div class="col-md">
								{{ form_row(form.idnat) }}
							</div>
							<div class="col-md">
								{{ form_row(form.numimpot) }}
							</div>
						</div>
					</div>
				</p>
				<p>
				Autres paramètres indispensables pour le bon fonctionnement de l'espace de travail.
				</p>
				<small>
					<nav>
						<div class="nav nav-tabs" id="nav-tab" role="tablist">
							<button class="nav-link active" id="nav-base-tab" data-bs-toggle="tab" data-bs-target="#nav-base" type="button" role="tab" aria-controls="nav-base" aria-selected="true">
								{{ ux_icon('material-symbols:settings', {height: '20px', width: '20px'}) }}
								Paramètres de base
							</button>
							<button class="nav-link" id="nav-avances-tab" data-bs-toggle="tab" data-bs-target="#nav-avances" type="button" role="tab" aria-controls="nav-avances" aria-selected="true">
								{{ ux_icon('material-symbols:settings', {height: '20px', width: '20px'}) }}
								Paramètres avancés
							</button>
						</div>
					</nav>
					{# Contenu de chaque Onglet #}
					<div class="tab-content p-2" id="nav-tabContent">
						<div class="tab-pane fade show active" id="nav-base" role="tabpanel" aria-labelledby="nav-base-tab" tabindex="0">
							{% include 'admin/entreprise/segments/parametres-de-base.html.twig' %}
						</div>
						<div class="tab-pane fade" id="nav-avances" role="tabpanel" aria-labelledby="nav-avances-tab" tabindex="0">
							{% include 'admin/entreprise/segments/parametres-avances.html.twig' %}
						</div>
					</div>
				</small>
				{{ form_widget(form.enregistrer) }}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
