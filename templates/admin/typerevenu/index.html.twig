{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "typerevenu_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
        <div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
                    {% if typerevenus|length == 0 %}
                        {{ "list_filter_result_empty" | trans }}
                    {% else %}
                        {{ "list_filter_result_elements" | trans({
                            ':number': typerevenus|length
                        })}}
                    {% endif %}
                    <div class="d-flex gap-1">
                        {{ knp_pagination_render(typerevenus) }}
                    </div>
                </caption>
                {% if typerevenus|length != 0 %}
                    <thead class="table-light">
                            <tr>
                                <th scope="col">
                                    <div class='d-flex justify-content-start text-secondary'>
                                        {{ "list_of_object" | trans }}
                                    </div>
                                </th>
                                <th scope="col" style="width:100px" >
                                    <div class='d-flex justify-content-end'>
                                        {# {{ "note_list_actions" | trans }} #}
                                    </div>
                                </th>
                            </tr>
                        </thead>
                    <tbody class="table-group-divider">
                        {# Boucler les donnees #}
                        {% for typerevenu in typerevenus %}
                            <tr id="row_typerevenu_{{ typerevenu.id }}" class="element-a-encadrer parent-a-options">
                                <td>
                                    <a class="m-2 fw-bold" href="{{ path('admin.typerevenu.edit', {'idTypeRevenu':typerevenu.id, 'idEntreprise': entreprise.id})}}">
                                        {{ include('segments/icones/typerevenu.html.twig', {size:'18px'}) }}
                                        {{ typerevenu.nom }}
                                    </a><br/>
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
                                            {{ constante.Revenu_getNomRedevable(typerevenu) }}
                                        </span> 
                                        {% if typerevenu.pourcentage != 0 %}
                                            <span class="text-secondary"> • {{typerevenu.pourcentage * 100}}% de {{ typerevenu.typeChargement.nom }}</span> 
                                        {% endif %}
                                        {% if typerevenu.montantflat != 0 %}
                                            <span class="text-secondary"> • Montant fixe: {{typerevenu.montantflat |format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        {% endif %}
                                        {% if typerevenu.shared == true %}
                                            <span class="text-secondary"> • Partageable</span> 
                                        {% else %}
                                            <span class="text-danger"> • Non partageable</span> 
                                        {% endif %}
                                        {% if typerevenu.multipayments == true %}
                                            <span class="text-secondary"> • Multi-tranches</span> 
                                        {% else %}
                                            <span class="text-danger"> • Mono-tranche</span> 
                                        {% endif %}
                                        {% if typerevenu.appliquerPourcentageDuRisque == true %}
                                            <span class="text-secondary"> • Le taux de commission lié au risque prévaut</span> 
                                        {% endif %}
                                    </small><br/>
                                    {# Section commissions #}
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/revenu.html.twig', {size:'16px'}) }}
                                            Com. pure: {{ constante.Type_revenu_getMontant_pure(typerevenu, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                        <span class="text-secondary"> • Com. ht: {{ constante.Type_revenu_getMontant_ht(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary fw-bold"> • C. totale: {{ constante.Type_revenu_getMontant_ttc(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • Payée: {{ constante.Type_revenu_getMontant_ttc_collecte(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        {% set couleur = "text-secondary" %}
                                        {% if constante.Type_revenu_getMontant_ttc_solde(typerevenu) != 0 %}
                                            {% set couleur = "text-danger" %}
                                        {% endif %}
                                        <span class="{{couleur}}"> • Solde: {{ constante.Type_revenu_getMontant_ttc_solde(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    </small><br/>
                                    {# La reserve du courtier = ce qui revient au courtier après avoir payé tous les partenaires #}
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/revenu.html.twig', {size:'16px'}) }}
                                            La réserve finale pour {{ entreprise.nom }} est de {{ constante.TypeRevenu_getReserve(typerevenu, -1)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                    </small><br>
                                    {% for taxe in serviceTaxe.taxes %}
                                        {% if taxe.redevable == 0 %}
                                            {# Section Taxes : TVA#}
                                            <small class="m-2">
                                                <span class="text-secondary">
                                                    {{ include('segments/icones/taxe.html.twig', {size:'16px'}) }}
                                                    {{ taxe.code }}: {{ constante.Type_revenu_getMontant_taxe_payable_par_assureur(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                                </span> 
                                                <span class="text-secondary"> • {{ taxe.code }} payée: {{ constante.Type_revenu_getMontant_taxe_payable_par_assureur_payee(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                                {% set couleur = "text-secondary" %}
                                                {% if constante.Type_revenu_getMontant_taxe_payable_par_assureur_solde(typerevenu) != 0 %}
                                                    {% set couleur = "text-danger" %}
                                                {% endif %}
                                                <span class="{{couleur}}"> • Solde: {{ constante.Type_revenu_getMontant_taxe_payable_par_assureur_solde(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            </small><br/>
                                        {% endif %}
                                        {% if taxe.redevable == 1 %}
                                            {# Section Taxe: ARCA #}
                                            <small class="m-2">
                                                <span class="text-secondary">
                                                    {{ include('segments/icones/taxe.html.twig', {size:'16px'}) }}
                                                    {{ taxe.code }}: {{ constante.Type_revenu_getMontant_taxe_payable_par_courtier(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                                </span> 
                                                <span class="text-secondary"> • {{ taxe.code }} payée: {{ constante.Type_revenu_getMontant_taxe_payable_par_courtier_payee(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                                {% set couleur = "text-secondary" %}
                                                {% if constante.Type_revenu_getMontant_taxe_payable_par_courtier_solde(typerevenu) != 0 %}
                                                    {% set couleur = "text-danger" %}
                                                {% endif %}
                                                <span class="{{couleur}}"> • Solde dû: {{ constante.Type_revenu_getMontant_taxe_payable_par_courtier_solde(typerevenu)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            </small><br/>
                                        {% endif %}
                                    {% endfor %}
                                    {% for partenaire in constante.Type_revenu_getPartenaires(typerevenu) %}
                                        {# Retro-commission #}
                                        {% if partenaire != null and constante.Type_revenu_getMontant_pure(typerevenu, -1, true) != 0 and typerevenu.shared == true %}
                                            <small class="m-2">
                                                <span class="text-secondary">
                                                    {{ include('segments/icones/partenaire.html.twig', {size:'16px'}) }}
                                                    Assiette: {{ constante.Type_revenu_getMontant_pure(typerevenu, -1, true)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                                </span> 
                                                <span class="text-secondary"> • Rétro-com dûe à {{ partenaire.nom }}: {{ constante.Type_revenu_getMontant_retrocommissions_payable_par_courtier(typerevenu, partenaire, -1, true)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                                <span class="text-secondary"> • Rétro-com payée: {{ constante.Type_revenu_getMontant_retrocommissions_payable_par_courtier_payee(typerevenu, partenaire, -1, true)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                                {% set couleur = "text-secondary" %}
                                                {% if constante.Type_revenu_getMontant_retrocommissions_payable_par_courtier_solde(typerevenu, partenaire, -1, true) != 0 %}
                                                    {% set couleur = "text-danger" %}
                                                {% endif %}
                                                <span class="{{couleur}}"> • Solde dû: {{ constante.Type_revenu_getMontant_retrocommissions_payable_par_courtier_solde(typerevenu, partenaire, -1, true)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span>
                                            </small><br>
                                            {% if constante.Partenaire_hasConditionsSpeciales(partenaire) %}
                                                <small class="m-2">
                                                    {% for condition in constante.Partenaire_getDescriptionsConditionSpecialePartage(partenaire) %}
                                                        <span class="text-danger">
                                                            {{ include('segments/icones/partenaire.html.twig', {size:'16px'}) }}
                                                             • 
                                                            {{ condition }}
                                                        </span>
                                                    {% endfor %}
                                                </small><br>
                                            {% endif %}
                                        {% endif %}
                                    {% endfor %}
                                </td>
                                <td>
                                    <div class="options-du-parent">
                                        <div class="d-flex gap-1 d-flex justify-content-end">
                                            {# Les actions sur l element de la liste #}
                                            <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.typerevenu.edit', {'idEntreprise': entreprise.id, 'idTypeRevenu':typerevenu.id })}}" class="" mthod = 'POST'>
                                                {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
                                            </a>
                                            <form action="{{ path('admin.typerevenu.remove', {'idTypeRevenu':typerevenu.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                                <input type='hidden' name='_method' value='DELETE'>
                                                <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                    {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
