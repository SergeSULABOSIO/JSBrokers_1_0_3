<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;">
        <style>
            .tableau_vaste{
                width: 100%;
                border-collapse: collapse;
            }
            .grand_titre {
                text-align: center;
                /* font-family: Arial, sans-serif; */
                font-size: 18px;
                color: black;
                text-transform: uppercase;
                font-weight: bold;
                padding: 15px;
            }
            .moyen_titre {
                text-transform: uppercase;
                text-align: left;
                /* font-family: Arial, sans-serif; */
                font-size: 16px;
                font-weight: bold;
                color: black;
            }
            .gras {
                font-weight: bold;
            }
            .normal_texte {
                text-align: left;
                font-weight: normal;
                /* font-family: Georgia, Arial; */
                font-style: normal;
                font-size: 12px;
                color: black;
            }
            .petit_texte {
                text-align: left;
                font-weight: normal;
                /* font-family: Georgia, Arial; */
                font-style: normal;
                font-size: 10px;
                color: black;
            }

            .droite {
                position: relative;
                left: 40%;
            }
            .texte-centre {
                text-align: center;
            }
            .texte-droite {
                text-align: right;
            }
            
            a:link {
                text-decoration: none;
            }

            a:visited {
                text-decoration: none;
            }

            a:hover {
                text-decoration: none;
                font-weight: bold;
            }

            a:active {
                text-decoration: underline;
            }

            .center {
                margin: auto;
            }
            .bas-de-page {
                position: fixed;
                bottom: 0;
                right: 0;
                width: 100%;
            }

            table {
                margin-bottom: 2em;
                border-collapse: collapse;
            }

            thead {
                background-color: lightgray;
            }

            tbody {
                /* background-color: #ffffee; */
            }

            th,td {
                border: 1px solid darkgray;
                padding: 3px;
                text-align: left;
                font-size: 10px;
            }

            .row{
                display:flex;
                justify-content: space-around;
            }
            .col{
                border:1px solid #ccc;
                padding: 10px;
                text-align: center;
                flex: 1;
            }
        </style>
    </head>
    <body>
        <div class = "container">
            {# Titre du bordereau #}
            <p class="normal_texte">
                <span class="moyen_titre">
                    BORDEREAU DE LA {{ constante.Note_getNameOfTypeNote(note) }} Réf.:<span class="gras">{{ note.reference }}</span>
                </span></br>
                Adressée à :
                {% if note.addressedto == 0 %}
                    {# Client #}
                    <span class="gras">{{ note.client.nom }}</span>
                {% endif %}
                {% if note.addressedto == 1 %}
                    {# Assureur #}
                    <span class="gras">{{ note.assureur.nom }}</span>
                {% endif %}
                {% if note.addressedto == 2 %}
                    {# Partenaire #}
                    <span class="gras">{{ note.partenaire.nom }}</span>
                {% endif %}
                {% if note.addressedto == 3 %}
                    {# Autorité fiscale #}
                    <span class="gras">{{ note.autoritefiscale.abreviation }}</span>
                {% endif %}
                 • Description: <span class="gras">{{ note.description }}</span>
            </p>


            CONTENU ICI
            <div class="col">   
                <div class="row">N°</div>
                <div class="row">Ref. Police</div>
                <div class="row">Nom Client</div>
            </div>


            {# Bas de page #}
            <br/>
            <p class="petit_texte texte-centre bas-de-page" style="">
                <span class="gras normal_texte">{{ entreprise.nom }}</span>
                </br>
                Adresse: <span class="gras">{{ entreprise.adresse }}</span>
                 • Téléphone: <span class="gras">{{ entreprise.telephone }}</span>
                 • Licence: <span class="gras">{{ entreprise.licence }}</span>
                 • Capital social: <span class="gras">{{ entreprise.capitalSociale|format_currency(serviceMonnaie.codeMonnaieLocale, locale: 'en') }}</span>
                </br>
                RCCM: <span class="gras">{{ entreprise.rccm }}</span>
                 • ID. NAT: <span class="gras">{{ entreprise.idnat }}</span>
                 • Num. Impôt: <span class="gras">{{ entreprise.numimpot }}</span>
                </br>
                <a href="{{ entreprise.siteweb }}"><span class="">{{ entreprise.siteweb }}</span></a>
            </p>
        </div>
    </body>
</html>