{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "comptebancaire_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
        <div class="d-flex shadow-sm sensible bg-white">
            <table class="table table-hover table-sm caption-top p-3">
                <caption>
                    {% if comptebancaires|length == 0 %}
                        {{ "comptebancaires_filter_result_empty" | trans }}
                    {% else %}
                        {{ "comptebancaires_filter_result_elements" | trans({
                            ':number': comptebancaires|length
                        })}}
                    {% endif %}
                    <div class="d-flex gap-1">
                        {{ knp_pagination_render(comptebancaires) }}
                    </div>
                </caption>
                {% if comptebancaires|length != 0 %}
                    <thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
                    <tbody class="table-group-divider">
                        {# Boucler les donnees #}
                        {% for comptebancaire in comptebancaires %}
                            <tr id="row_taxe_{{ comptebancaire.id }}" class="element-a-encadrer parent-a-options">
                                <td>
                                    <a class="m-2 fw-bold" href="{{ path('admin.comptebancaire.edit', {'idCompteBancaire':comptebancaire.id, 'idEntreprise': entreprise.id})}}">
                                        {{ include('segments/icones/comptebancaire.html.twig', {size:'18px'}) }}
                                        {{ comptebancaire.nom }} • N°: {{ comptebancaire.numero }} • Banque: {{ comptebancaire.banque }}
                                    </a><br/>
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
                                            Intitulé: {{ comptebancaire.intitule }} • Code Swift: {{ comptebancaire.codeSwift }}
                                        </span> 
                                    </small><br/>
                                    <small class="m-2 fw-bold">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/monnaie.html.twig', {size:'16px'}) }}
                                            Débit: {{ constante.CompteBancaire_getMontantDebit(comptebancaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                        <span class="text-secondary"> • Crédit: {{ constante.CompteBancaire_getMontantCredit(comptebancaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • Solde: {{ constante.CompteBancaire_getMontantSolde(comptebancaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    </small><br/>
                                </td>
                                <td>
                                    <div class="options-du-parent">
                                        <div class="d-flex gap-1 d-flex justify-content-end">
                                            {# Les actions sur l element de la liste #}
                                            <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.comptebancaire.edit', {'idEntreprise': entreprise.id, 'idCompteBancaire':comptebancaire.id })}}" class="" mthod = 'POST'>
                                                {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
                                            </a>
                                            <form action="{{ path('admin.comptebancaire.remove', {'idCompteBancaire':comptebancaire.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                                <input type='hidden' name='_method' value='DELETE'>
                                                <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                    {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
