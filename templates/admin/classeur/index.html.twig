{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "classeur_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
                {% if classeurs|length == 0 %}
                    {{ "list_filter_result_empty" | trans }}
                {% else %}
                    {{ "list_filter_result_elements" | trans({
                        ':number': classeurs|length
                    })}}
                {% endif %}
                <div class="d-flex gap-1">
                    {{ knp_pagination_render(classeurs) }}
                </div>
            </caption>
            {% if classeurs|length != 0 %}
                <thead class="table-light">
                    <tr>
                        <th scope="col">
                            <div class='d-flex justify-content-start text-secondary'>
                                {{ "list_of_object" | trans }}
                            </div>
                        </th>
                        <th scope="col" style="width:100px" >
                            <div class='d-flex justify-content-end'>
                                {# {{ "note_list_actions" | trans }} #}
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {# Boucler les donnees #}
                    {% for classeur in classeurs %}
                        <tr id="row_classeur_{{ classeur.id }}" class="element-a-encadrer parent-a-options">
                            <td>
                                <a class="m-2 fw-bold" href="{{ path('admin.classeur.edit', {'idClasseur':classeur.id, 'idEntreprise': entreprise.id})}}">
                                    {{ include('segments/icones/classeur.html.twig', {size:'18px'}) }}
                                    {{ classeur.nom }}
                                </a><br/>
                                <small class="m-2">
                                    <span class="text-secondary">
                                        {{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
                                        {{ classeur.description }}
                                    </span>
                                    <span class="text-secondary">
                                         â€¢ {{ include('segments/icones/document.html.twig', {size:'16px'}) }}
                                        ({{ classeur.documents|length }})
                                    </span>
                                </small><br/>
                            </td>
                            <td>
                                <div class="options-du-parent">
                                    <div class="d-flex gap-1 d-flex justify-content-end">
                                        {# Les actions sur l element de la liste #}
                                        <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.classeur.edit', {'idEntreprise': entreprise.id, 'idClasseur':classeur.id })}}" class="" mthod = 'POST'>
                                            {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
                                            {# Modifier #}
                                        </a>
                                        <form action="{{ path('admin.classeur.remove', {'idClasseur':classeur.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                            <input type='hidden' name='_method' value='DELETE'>
                                            <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
                                                {# Supprimer #}
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            {% endif %}
        </table>
    </div>
{% endblock %}
