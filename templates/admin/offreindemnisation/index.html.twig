{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "offreindemnisation_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div class="d-flex">
        <table class="table table-hover table-sm caption-top">
            <caption>
                {% if offreindemnisations|length == 0 %}
                    {{ "offreindemnisation_filter_result_empty" | trans}}
                {% else %}
                    {{ "offreindemnisation_filter_result_elements" | trans({
                        ':number': offreindemnisations|length
                    })}}
                {% endif %}
                <div class="d-flex gap-1">
                    {{ knp_pagination_render(offreindemnisations) }}
                </div>
            </caption>
            {% if offreindemnisations|length != 0 %}
                <thead class="table-light">
                    <tr>
                        <th scope="col"><div class='d-flex justify-content-start'>{{ "offreindemnisation_list_title" | trans }}</div></th>
                        <th scope="col" style="width:100px" ><div class='d-flex justify-content-end'>{{ "offreindemnisation_list_actions" | trans }}</div></th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {# Boucler les donnees #}
                    {% for offreindemnisation in offreindemnisations %}
                        <tr id="row_offreindemnisation_{{ offreindemnisation.id }}">
                            <td>
                                {# <a class="m-2" href="{{ path('admin.offreindemnisation.edit', {'idOffreindemnisation':offreindemnisation.id, 'idEntreprise': entreprise.id})}}">
                                    {{ offreindemnisation.nom }}
                                </a> #}
                                <a class="m-2 fw-bold" href="{{ path('admin.offreindemnisation.edit', {'idOffreindemnisation':offreindemnisation.id, 'idEntreprise': entreprise.id})}}">
                                    {{ offreindemnisation.nom }} • {{ offreindemnisation.notificationSinistre.assure.nom }}
                                </a><br/>
                                <small class="m-2">
                                    {% if offreindemnisation.notificationsinistre.referenceSinistre != null %}
                                        <span class="text-secondary">
                                            Réf. Sinistre: {{ offreindemnisation.notificationsinistre.referenceSinistre }}
                                        </span>
                                    {% endif %}
                                    {# {% if notificationsinistre.referencePolice != null %}
                                        <span class="text-secondary">
                                             • Police: {{ notificationsinistre.referencePolice }}
                                        </span>
                                    {% endif %}
                                    {% if notificationsinistre.risque != null %}
                                        <span class="text-secondary">
                                             • Risque: {{ notificationsinistre.risque.code }}
                                        </span>
                                    {% endif %} #}
                                </small><br/>
                                <small class="m-2">
                                    <span class="text-secondary">Franchise: {{ offreindemnisation.franchiseAppliquee|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    <span class="text-secondary"> • Compensation: {{ offreindemnisation.notificationsinistre.dommage|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    <span class="text-secondary"> • Comp. versée: {{ 0|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    {% set couleur = "text-secondary" %}
                                    {% if true %}
                                        {% set couleur = "text-danger" %}
                                    {% endif %}
                                    <span class="{{couleur}}"> • Solde à regler: {{ 0|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                </small><br/>
                            </td>
                            <td>
                                <div class="d-flex gap-1 d-flex justify-content-end">
                                    {# Les actions sur l element de la liste #}
                                    <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.offreindemnisation.edit', {'idEntreprise': entreprise.id, 'idOffreindemnisation':offreindemnisation.id })}}" class="" mthod = 'POST'>
                                        {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                        {# Modifier #}
                                    </a>
                                    <form action="{{ path('admin.offreindemnisation.remove', {'idOffreindemnisation':offreindemnisation.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                        <input type='hidden' name='_method' value='DELETE'>
                                        <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                            {{ ux_icon('fluent:delete-20-filled', {height: '18px', width: '18px'}) }}
                                            {# Supprimer #}
                                        </button>
                                    </form>
                                    <div class="dropdown">
                                        <a class="btn btn-outline-secondary dropdown-toggle border-0 btn-sm" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            {{ ux_icon('gravity-ui:dots-9', {height: '18px', width: '18px'}) }}
                                            {# Autres #}
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                                    {{ "offreindemnisation_item_set_as_display_offreindemnisation" | trans }}
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                                    {{ "offreindemnisation_item_set_as_input_offreindemnisation" | trans }}
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                                    {{ "offreindemnisation_item_set_as_display_and_input_offreindemnisation" | trans }}
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            {% endif %}
        </table>
    </div>
{% endblock %}
