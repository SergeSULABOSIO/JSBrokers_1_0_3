{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "offreindemnisation_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
                    {% if offreindemnisations|length == 0 %}
                        {{ "list_filter_result_empty" | trans}}
                    {% else %}
                        {{ "list_filter_result_elements" | trans({
                            ':number': offreindemnisations|length
                        })}}
                    {% endif %}
                    <div class="d-flex gap-1">
                        {{ knp_pagination_render(offreindemnisations) }}
                    </div>
                </caption>
                {% if offreindemnisations|length != 0 %}
                    <thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
                    <tbody class="table-group-divider">
                        {# Boucler les donnees #}
                        {% for offreindemnisation in offreindemnisations %}
                            <tr id="row_offreindemnisation_{{ offreindemnisation.id }}" class="element-a-encadrer parent-a-options">
                                <td>
                                    <a class="m-2 fw-bold" href="{{ path('admin.offreindemnisation.edit', {'idOffreindemnisation':offreindemnisation.id, 'idEntreprise': entreprise.id})}}">
                                        {{ include('segments/icones/offreindemnisation.html.twig', {size:'18px'}) }}
                                        {{ offreindemnisation.nom }}
                                    </a><br/>
                                    <small class="m-2">
                                        {% if offreindemnisation.notificationsinistre.assure != null %}
                                            <span class="text-secondary">
                                                {{ include('segments/icones/client.html.twig', {size:'16px'}) }}
                                                {{ offreindemnisation.notificationsinistre.assure.nom }}
                                                • 
                                                {{ include('segments/icones/datetime.html.twig', {size:'16px'}) }}
                                                {{ offreindemnisation.notificationsinistre.occuredAt|format_datetime('short', 'short', locale: utilisateur.locale) }}
                                            </span>
                                        {% endif %}
                                        {% if offreindemnisation.notificationsinistre.referenceSinistre != null %}
                                            <span class="text-secondary">
                                                {{ include('segments/icones/notificationsinistre.html.twig', {size:'16px'}) }}
                                                {{ offreindemnisation.notificationsinistre.referenceSinistre }}
                                            </span>
                                        {% endif %}
                                    </small><br/>
                                    <small class="m-2 fw-bold">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/offreindemnisation.html.twig', {size:'16px'}) }}
                                            Franchise: {{ offreindemnisation.franchiseAppliquee|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                        <span class="text-secondary"> • Compensation: {{ offreindemnisation.montantPayable|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • Versée: {{ constante.Offre_Indemnisation_getCompensationVersee(offreindemnisation)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        {% set couleur = "text-secondary" %}
                                        {% if constante.Offre_Indemnisation_getSoldeAVerser(offreindemnisation) != 0 %}
                                            {% set couleur = "text-danger" %}
                                        {% endif %}
                                        <span class="{{couleur}}"> • Solde: {{ constante.Offre_Indemnisation_getSoldeAVerser(offreindemnisation)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    </small><br/>
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/client.html.twig', {size:'16px'}) }}
                                            Bénéficiaire: {{ offreindemnisation.beneficiaire }}
                                        </span> 
                                        <span class="text-secondary">
                                            • {{ include('segments/icones/comptebancaire.html.twig', {size:'16px'}) }}
                                            Réf. Bancaire: {{ offreindemnisation.referenceBancaire }}</span> 
                                    </small><br/>
                                </td>
                                <td>
                                    <div class="options-du-parent">
                                        <div class="d-flex gap-1 d-flex justify-content-end">
                                            {# Les actions sur l element de la liste #}
                                            <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.offreindemnisation.edit', {'idEntreprise': entreprise.id, 'idOffreindemnisation':offreindemnisation.id })}}" class="" mthod = 'POST'>
                                                {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
                                            </a>
                                            <form action="{{ path('admin.offreindemnisation.remove', {'idOffreindemnisation':offreindemnisation.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                                <input type='hidden' name='_method' value='DELETE'>
                                                <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                    {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
