{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "currency_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex">
			<table class="table table-hover table-sm caption-top">
				<caption>
					{% if monnaies|length == 0 %}
						{{ "currency_filter_result_empty" | trans}}
					{% else %}
						{{ "currency_filter_result_elements" | trans({
							':number': monnaies|length
						})}}
					{% endif %}
					<div class="d-flex gap-1">
						{{ knp_pagination_render(monnaies) }}
					</div>
				</caption>
				{% if monnaies|length != 0 %}
					<thead class="table-light">
						<tr>
							{# <th scope="col"><div class='d-flex justify-content-start'>Code</div></th> #}
							<th scope="col"><div class='d-flex justify-content-start'>{{ "currency_list_title" | trans }}</div></th>
							<th scope="col" style="width:100px" ><div class='d-flex justify-content-end'>{{ "currency_list_actions" | trans }}</div></th>
						</tr>
					</thead>
					<tbody class="table-group-divider">
						{# Boucler les donnees #}
						{% for monnaie in monnaies %}
							<tr id="row_monnaie_{{ monnaie.id }}">
								<td>
									{# <turbo-frame id="monnaie_{{ monnaie.id }}"> #}
										<a class="m-2 fw-bold" href="{{ path('admin.monnaie.edit', {'idMonnaie':monnaie.id, 'idEntreprise': entreprise.id})}}">
											{{ ux_icon('tdesign:money-filled', {height: '19px', width: '19px'}) }} {{ monnaie.nom }} • {{ monnaie.code }}
										</a><br/>
										<small class="m-2">
											<span class="text-secondary fw-bold">{{ "currency_item_exchange_rate" | trans}} {{ 1 |format_currency('USD') }} = {{ monnaie.tauxusd |format_currency(monnaie.code) }}</span> 
											<span class="text-secondary"> • {{ "currency_item_fonction" | trans}} {{ constante.getFonctionMonnaie(monnaie.getFonction) }}</span> 
											<span class="text-secondary">
												{% if monnaie.islocale == 1 %}
													 • {{ "currency_item_monnaie_locale" | trans}}</small>
												{% else %}
													 • {{ "currency_item_monnaie_etrangere" | trans}}</small>
												{% endif %}
											</span> 
										</small><br/>
									{# </turbo-frame> #}
								</td>
								<td>
									<div class="d-flex gap-1 d-flex justify-content-end">
										{# Les actions sur l element de la liste #}
										<a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.monnaie.edit', {'idEntreprise': entreprise.id, 'idMonnaie':monnaie.id })}}" class="" mthod = 'POST'>
											{{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
											{# Modifier #}
										</a>
										<form action="{{ path('admin.monnaie.remove', {'idMonnaie':monnaie.id, 'idEntreprise': entreprise.id})}}" method='POST'>
											<input type='hidden' name='_method' value='DELETE'>
											<button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
												{{ ux_icon('fluent:delete-20-filled', {height: '18px', width: '18px'}) }}
												{# Supprimer #}
											</button>
										</form>
										<div class="dropdown">
											<a class="btn btn-outline-secondary dropdown-toggle border-0 btn-sm" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
												{{ ux_icon('gravity-ui:dots-9', {height: '18px', width: '18px'}) }}
												{# Autres #}
											</a>
											<ul class="dropdown-menu">
												<li>
													<a class="dropdown-item" href="#">
														{{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
														{{ "currency_item_set_as_display_currency" | trans }}
													</a>
												</li>
												<li>
													<a class="dropdown-item" href="#">
														{{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
														{{ "currency_item_set_as_input_currency" | trans }}
													</a>
												</li>
												<li>
													<a class="dropdown-item" href="#">
														{{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
														{{ "currency_item_set_as_display_and_input_currency" | trans }}
													</a>
												</li>
											</ul>
										</div>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				{% endif %}
			</table>
		</div>
	</div>
{% endblock %}
