{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "currency_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
					{% if monnaies|length == 0 %}
						{{ "list_filter_result_empty" | trans}}
					{% else %}
						{{ "list_filter_result_elements" | trans({
							':number': monnaies|length
						})}}
					{% endif %}
					<div class="d-flex gap-1">
						{{ knp_pagination_render(monnaies) }}
					</div>
				</caption>
				{% if monnaies|length != 0 %}
					<thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
					<tbody class="table-group-divider">
						{# Boucler les donnees #}
						{% for monnaie in monnaies %}
							<tr id="row_monnaie_{{ monnaie.id }}" class="element-a-encadrer parent-a-options">
								<td>
									{# <turbo-frame id="monnaie_{{ monnaie.id }}"> #}
										<a class="m-2 fw-bold" href="{{ path('admin.monnaie.edit', {'idMonnaie':monnaie.id, 'idEntreprise': entreprise.id})}}">
											{{ include('segments/icones/monnaie.html.twig', {size:'18px'}) }} 
											{{ monnaie.nom }} • {{ monnaie.code }}
										</a><br/>
										<small class="m-2">
											<span class="text-secondary">
												{{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
												{{ "currency_item_exchange_rate" | trans}} {{ 1 |format_currency('USD') }} = {{ monnaie.tauxusd |format_currency(monnaie.code) }}
											</span> 
											<span class="text-secondary"> • {{ "currency_item_fonction" | trans}} {{ constante.getFonctionMonnaie(monnaie.getFonction) }}</span> 
											<span class="text-secondary">
												{% if monnaie.islocale == 1 %}
													 • {{ "currency_item_monnaie_locale" | trans}}</small>
												{% else %}
													 • {{ "currency_item_monnaie_etrangere" | trans}}</small>
												{% endif %}
											</span> 
										</small><br/>
									{# </turbo-frame> #}
								</td>
								<td>
									<div class="options-du-parent">
										<div class="d-flex gap-1 d-flex justify-content-end">
											{# Les actions sur l element de la liste #}
											<a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.monnaie.edit', {'idEntreprise': entreprise.id, 'idMonnaie':monnaie.id })}}" class="" mthod = 'POST'>
												{{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
											</a>
											<form action="{{ path('admin.monnaie.remove', {'idMonnaie':monnaie.id, 'idEntreprise': entreprise.id})}}" method='POST'>
												<input type='hidden' name='_method' value='DELETE'>
												<button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
													{{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
												</button>
											</form>
											<div class="dropdown">
												<a class="btn btn-outline-secondary dropdown-toggle border-0 btn-sm" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
													{{ include('segments/icones/actions/options.html.twig', {size:'18px'}) }}
													{# Autres #}
												</a>
												<ul class="dropdown-menu">
													<li>
														<a class="dropdown-item" href="#">
															{{ include('segments/icones/monnaie.html.twig', {size:'18px'}) }}
															{{ "currency_item_set_as_display_currency" | trans }}
														</a>
													</li>
													<li>
														<a class="dropdown-item" href="#">
															{{ include('segments/icones/monnaie.html.twig', {size:'18px'}) }}
															{{ "currency_item_set_as_input_currency" | trans }}
														</a>
													</li>
													<li>
														<a class="dropdown-item" href="#">
															{{ include('segments/icones/monnaie.html.twig', {size:'18px'}) }}
															{{ "currency_item_set_as_display_and_input_currency" | trans }}
														</a>
													</li>
												</ul>
											</div>
										</div>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				{% endif %}
			</table>
		</div>
	</div>
{% endblock %}
