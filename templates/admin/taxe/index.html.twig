{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "taxe_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
        <div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
                <caption>
                    {% if taxes|length == 0 %}
                        {{ "list_filter_result_empty" | trans}}
                    {% else %}
                        {{ "list_filter_result_elements" | trans({
                            ':number': taxes|length
                        })}}
                    {% endif %}
                    <div class="d-flex gap-1">
                        {{ knp_pagination_render(taxes) }}
                    </div>
                </caption>
                {% if taxes|length != 0 %}
                    <thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
                    <tbody class="table-group-divider">
                        {# Boucler les donnees #}
                        {% for taxe in taxes %}
                            <tr id="row_taxe_{{ taxe.id }}" class="element-a-encadrer parent-a-options">
                                <td>
                                    <a class="m-2 fw-bold" href="{{ path('admin.taxe.edit', {'idTaxe':taxe.id, 'idEntreprise': entreprise.id})}}">
                                        {{ include('segments/icones/taxe.html.twig', {size:'18px'}) }}
                                        {{ taxe.code }} • {{ taxe.description }} • {{ constante.Taxe_getNomAutoriteFiscale(taxe) }}
                                    </a><br/>
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
                                            La commission hors taxe est la base du calcul
                                        </span> 
                                    </small><br/>
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
                                            Taux - IARD: {{ taxe.tauxIARD * 100 }}% • Taux - VIE: {{ taxe.tauxVIE * 100 }}% • {{ constante.Taxe_getNomRedevable(taxe) }}
                                        </span> 
                                    </small><br/>
                                    {# Section commissions #}
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/revenu.html.twig', {size:'16px'}) }}
                                            Com. pure: {{ constante.Taxe_getMontant_commission_pure(taxe, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                        <span class="text-secondary"> • Com. ht: {{ constante.Taxe_getMontant_commission_ht(taxe, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • C. totale: {{ constante.Taxe_getMontant_commission_ttc(taxe, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • C. collectée: {{ constante.Taxe_getMontant_commission_ttc_collectee(taxe)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        {% set couleur = "text-secondary" %}
                                        {% if constante.Taxe_getMontant_commission_ttc_solde(taxe, -1, false) != 0 %}
                                            {% set couleur = "text-danger" %}
                                        {% endif %}
                                        <span class="{{couleur}}"> • Solde: {{ constante.Taxe_getMontant_commission_ttc_solde(taxe, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    </small><br/>
                                    {% if taxe.redevable == 0 %}
                                        {# Section Taxes : TVA#}
                                        <small class="m-2 fw-bold">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/taxe.html.twig', {size:'16px'}) }}
                                                Montant {{ taxe.code }} générée: {{ constante.Taxe_getMontant_taxe_payable_par_assureur(taxe, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                            </span> 
                                            <span class="text-secondary"> • Montant {{ taxe.code }} payée: {{ constante.Taxe_getMontant_taxe_payable_par_assureur_payee(taxe)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            {% set couleur = "text-secondary" %}
                                            {% if constante.Taxe_getMontant_taxe_payable_par_assureur_solde(taxe, false) != 0 %}
                                                {% set couleur = "text-danger" %}
                                            {% endif %}
                                            <span class="{{couleur}}"> • Solde: {{ constante.Taxe_getMontant_taxe_payable_par_assureur_solde(taxe, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        </small><br/>
                                    {% endif %}
                                    {% if taxe.redevable == 1 %}
                                        {# Section Taxe: ARCA #}
                                        <small class="m-2 fw-bold">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/taxe.html.twig', {size:'16px'}) }}
                                                Montant {{ taxe.code }} générée: {{ constante.Taxe_getMontant_taxe_payable_par_courtier(taxe, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                            </span> 
                                            <span class="text-secondary"> • Montant {{ taxe.code }} payée: {{ constante.Taxe_getMontant_taxe_payable_par_courtier_payee(taxe)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            {% set couleur = "text-secondary" %}
                                            {% if constante.Taxe_getMontant_taxe_payable_par_courtier_solde(taxe, false) != 0 %}
                                                {% set couleur = "text-danger" %}
                                            {% endif %}
                                            <span class="{{couleur}}"> • Solde: {{ constante.Taxe_getMontant_taxe_payable_par_courtier_solde(taxe, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        </small><br/>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="options-du-parent">
                                        <div class="d-flex gap-1 d-flex justify-content-end">
                                            {# Les actions sur l element de la liste #}
                                            <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.taxe.edit', {'idEntreprise': entreprise.id, 'idTaxe':taxe.id })}}" class="" mthod = 'POST'>
                                                {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
                                            </a>
                                            <form action="{{ path('admin.taxe.remove', {'idTaxe':taxe.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                                <input type='hidden' name='_method' value='DELETE'>
                                                <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                    {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
