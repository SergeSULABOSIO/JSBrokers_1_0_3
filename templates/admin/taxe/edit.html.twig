{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "taxe_form_description" | trans({
		":user": utilisateur.nom, 
		":taxe": taxe.code, 
	}) | raw }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	{# {{ form(form) }} #}
	{{ form_start(form, {
		'attr': {
			'data-controller': 'taxe-formulaire', 
			'data-taxe-formulaire-idtaxe-value': taxe.id,
			'data-taxe-formulaire-identreprise-value': entreprise.id,
			}
		}) }}
	<div class="d-flex shadow-sm card bg-body sensible bg-white">
		<div class="card-body">
			<div>
				<div class="row">
					<div class="col">
						{{ form_row(form.code, {'attr': {'data-taxe-formulaire-target': 'code'}}) }}
					</div>
					<div class="col">
						{{ form_row(form.tauxIARD) }}
					</div>
					<div class="col">
						{{ form_row(form.tauxVIE) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.description) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.redevable) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.autoriteFiscales) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_widget(form.enregistrer, {
							'attr': {
								'data-taxe-formulaire-target': 'btEnregistrer'
								}
							}) }}
					</div>
				</div>
			</div>
			<small>
				<span class="text-secondary m-2 fw-bold" data-taxe-formulaire-target="display" style="display:block;">Message d'infos ici</span>
			</small>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
