{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "bordereau_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
        <div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
                    {% if bordereaux|length == 0 %}
                        {{ "list_filter_result_empty" | trans }}
                    {% else %}
                        {{ "list_filter_result_elements" | trans({
                            ':number': bordereaux|length
                        })}}
                    {% endif %}
                    <div class="d-flex gap-1">
                        {{ knp_pagination_render(bordereaux) }}
                    </div>
                </caption>
                {% if bordereaux|length != 0 %}
                    <thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
                    <tbody class="table-group-divider">
                        {# Boucler les donnees #}
                        {% for bordereau in bordereaux %}
                            <tr id="row_bordereau_{{ bordereau.id }}" class="element-a-encadrer parent-a-options">
                                <td>
                                    <a class="m-2 fw-bold" href="{{ path('admin.bordereau.edit', {'idBordereau':bordereau.id, 'idEntreprise': entreprise.id})}}">
                                        {{ include('segments/icones/bordereau.html.twig', {size:'18px'}) }}
                                        {{ bordereau.montantTTC|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }} • {{ bordereau.nom }}
                                    </a><br/>
                                    <small class ="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/datetime.html.twig', {size:'18px'}) }}
                                            {{ bordereau.receivedat|format_datetime('short', 'short', locale: utilisateur.locale) }}
                                        </span>
                                        <span class="text-secondary">
                                            • {{ include('segments/icones/assureur.html.twig', {size:'18px'}) }}
                                            {{ bordereau.assureur.nom }}
                                        </span>
                                        <span class="text-secondary">
                                            • {{ include('segments/icones/document.html.twig', {size:'18px'}) }}
                                            ({{ bordereau.documents|length }})
                                        </span>
                                    </small><br/>
                                </td>
                                <td>
                                    <div class="options-du-parent">
                                        <div class="d-flex gap-1 d-flex justify-content-end">
                                            {# Les actions sur l element de la liste #}
                                            <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.bordereau.edit', {'idEntreprise': entreprise.id, 'idBordereau':bordereau.id })}}" class="" mthod = 'POST'>
                                                {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
                                            </a>
                                            <form action="{{ path('admin.bordereau.remove', {'idBordereau':bordereau.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                                <input type='hidden' name='_method' value='DELETE'>
                                                <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                    {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
