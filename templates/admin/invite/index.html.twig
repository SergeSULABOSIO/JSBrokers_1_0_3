{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
	{# {% include 'segments/boutons_entreprise_dashbord.html.twig' %} #}
{% endblock %}

{%  block titreRubrique %}
	{{ include('segments/icones/utilisateur.html.twig', {size:'18px'}) }}
	{{ constante.Invite_getInviteByUtilisateur(entreprise.id, utilisateur) }}>
	{{ entreprise.nom }}>
	<strong>
		{{ pageName }}
	</strong>
{% endblock %}

{% block descriptionRubrique %}
	<span class="text-secondary">
		{{ "invite_description_rubrique" | trans }}
	<span>
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
	{# {% include 'segments/menu_user_dashbord.html.twig' %} #}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
					{% if invites|length == 0 %}
						{{ "list_filter_result_empty" | trans}}
					{% else %}
						{{ "list_filter_result_elements" | trans({
							':number': invites|length
						})}}
					{% endif %}
					<div class="d-flex gap-1">
						{{ knp_pagination_render(invites) }}
					</div>
				</caption>
				{% if invites|length != 0 %}
					<thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
					<tbody
						class="table-group-divider">
						{# Boucler les donnees #}
						{% for invite in invites %}
							<tr id="row_invite_{{ invite.id }}" class="element-a-encadrer parent-a-options">
								<td>
									<a class="m-2 fw-bold" href="{{ path('admin.invite.edit', {'idInvite':invite.id, 'idEntreprise': entreprise.id})}}">
										{{ include('segments/icones/invite.html.twig', {size:'18px'}) }}
										{{ invite.nom }}
									</a><br>
									<small class ="m-2">
										<span class="text-secondary">
											{{ include('segments/icones/datetime.html.twig', {size:'16px'}) }}
											{{ invite.createdAt|date('d/m/Y H:i') }}
										</span>
										<span class="text-secondary">
											 • 
											{{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
											 {{ invite.email }}
										</span>
										<span class="text-secondary">
											{% if invite.isproprietaire == true %}
												• 
												{{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
												Propriétaire (administrateur)
											{% else %}
												• 
												{{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
												Invité (employé)	
											{% endif %}
										</span>
									</small><br/>
								</td>
								<td>
									<div class="options-du-parent">
										<div class="d-flex gap-1 d-flex justify-content-end">
											{# Les actions sur l element de la liste #}
											<a class="btn btn-outline-primary btn-sm border-0" href="{{ path('admin.invite.edit', {'idInvite':invite.id, 'idEntreprise': entreprise.id})}}" class="" mthod='POST'>
												{{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
											</a>
											{% if invite.isProprietaire == false %}
												<form action="{{ path('admin.invite.remove', {'idInvite':invite.id, 'idEntreprise': entreprise.id})}}" method='POST'>
													<input type='hidden' name='_method' value='DELETE'>
													<button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
														{{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
														{# Supprimer #}
													</button>
												</form>
											{% endif %}
											<div class="dropdown">
												<a class="btn btn-outline-secondary dropdown-toggle border-0 btn-sm" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
													{{ include('segments/icones/actions/options.html.twig', {size:'18px'}) }}
													{# Autres #}
												</a>
												<ul class="dropdown-menu">
													<li>
														<a class="dropdown-item" href="#">
															{{ include('segments/icones/actions/role.html.twig', {size:'18px'}) }}
															{{ "invite_liste_titre_actions_set_role" | trans }}
														</a>
													</li>
													<li>
														<a class="dropdown-item" href="#">
															{{ include('segments/icones/actions/invite.html.twig', {size:'18px'}) }}
															{{ "invite_liste_titre_actions_send_invite_email" | trans }}
														</a>
													</li>
													<li><hr class="dropdown-divider"></li>
													<li>
														<a class="dropdown-item" href="#">
															{{ include('segments/icones/actions/disable.html.twig', {size:'18px'}) }}
															{{ "invite_liste_titre_actions_desable_guest" | trans }}
														</a>
													</li>
													<li>
														<a class="dropdown-item text-muted" href="#">
															{{ include('segments/icones/utilisateur.html.twig', {size:'18px'}) }}
															{{ "invite_liste_titre_actions_enable_guest" | trans }}
														</a>
													</li>
												</ul>
											</div>
										</div>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				{% endif %}
			</table>
		</div>
	</div>
{% endblock %}
