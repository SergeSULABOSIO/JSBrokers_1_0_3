{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
	{# {{ utilisateur.nom }}>{{ "invite_page_name_list" | trans }}><strong>{{ pageName }}</strong> #}
{% endblock %}

{% block descriptionRubrique %}
    {{ "invite_creation_description_message" | trans({
		":user": utilisateur.nom, 
		":company": entreprise.nom, 
	}) | raw}}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	{# {{ form(form) }} #}
	{{ form_start(form) }}
		<div class="d-flex shadow-sm card bg-body sensible bg-white">
			<div class="card-body">
				<div>
					<div class="row">
						<div class="col">
							{{ form_row(form.nom) }}
						</div>
						<div class="col">
							{{ form_row(form.email) }}
						</div>
					</div>
					<div class="row">
						<div class="col">
							{{ form_row(form.assistants) }}
						</div>
					</div>
					<div class="row">
						<div class="col">
							{{ form_row(form.rolesEnFinance) }}
						</div>
					</div>
					<div class="row">
						<div class="col">
							{{ form_widget(form.enregistrer) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	{{ form_end(form) }}
{% endblock %}
