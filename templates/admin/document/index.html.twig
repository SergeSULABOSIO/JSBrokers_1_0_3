{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "document_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
                    {% if documents|length == 0 %}
                        {{ "list_filter_result_empty" | trans}}
                    {% else %}
                        {{ "list_filter_result_elements" | trans({
                            ':number': documents|length
                        })}}
                    {% endif %}
                    <div class="d-flex gap-1">
                        {{ knp_pagination_render(documents) }}
                    </div>
                </caption>
                {% if documents|length != 0 %}
                   <thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
                    <tbody class="table-group-divider">
                        {# Boucler les donnees #}
                        {% for document in documents %}
                            <tr id="row_document_{{ document.id }}" class="element-a-encadrer parent-a-options">
                                <td>
                                    <a class="m-2 fw-bold" href="{{ path('admin.document.edit', {'idDocument':document.id, 'idEntreprise': entreprise.id})}}">
                                        {{ include('segments/icones/document.html.twig', {size:'18px'}) }}
                                        {{ document.nom }}
                                    </a><br/>
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/datetime.html.twig', {size:'16px'}) }}
                                            Le {{ document.createdAt|format_datetime('short', 'none', locale: utilisateur.locale) }}
                                        </span>
                                        <span class="text-secondary">
                                            â€¢ {{ include('segments/icones/classeur.html.twig', {size:'16px'}) }}
                                            {{ document.classeur.nom }} ({{ document.classeur.documents|length }})
                                        </span>
                                    </small><br/>
                                    {% if document.pieceSinistre != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/modelepiecesinistre.html.twig', {size:'16px'}) }}
                                                {{ document.pieceSinistre }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.offreIndemnisationSinistre != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/offreindemnisation.html.twig', {size:'16px'}) }}
                                                {{ document.offreIndemnisationSinistre }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.cotation != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/cotation.html.twig', {size:'16px'}) }}
                                                {{ document.cotation }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.avenant != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/avenant.html.twig', {size:'16px'}) }}
                                                {{ document.avenant }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.tache != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/tache.html.twig', {size:'16px'}) }}
                                                {{ document.tache }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.feedback != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/feedback.html.twig', {size:'16px'}) }}
                                                {{ document.feedback }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.client != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/client.html.twig', {size:'16px'}) }}
                                                {{ document.client }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.bordereau != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/bordereau.html.twig', {size:'16px'}) }}
                                                {{ document.bordereau }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.compteBancaire != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/comptebancaire.html.twig', {size:'16px'}) }}
                                                {{ document.compteBancaire }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.piste != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/piste.html.twig', {size:'16px'}) }}
                                                {{ document.piste }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.partenaire != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/partenaire.html.twig', {size:'16px'}) }}
                                                {{ document.partenaire }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                    {% if document.paiement != null %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/paiement.html.twig', {size:'16px'}) }}
                                                {{ document.paiement.description }}
                                            </span>
                                        </small><br/>
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="options-du-parent">
                                        <div class="d-flex gap-1 d-flex justify-content-end">
                                            {# Les actions sur l element de la liste #}
                                            <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.document.edit', {'idEntreprise': entreprise.id, 'idDocument':document.id })}}" class="" mthod = 'POST'>
                                                {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
                                            </a>
                                            <form action="{{ path('admin.document.remove', {'idDocument':document.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                                <input type='hidden' name='_method' value='DELETE'>
                                                <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                    {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
                                                </button>
                                            </form>
                                            
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
