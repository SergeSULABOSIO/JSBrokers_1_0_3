{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "revenucourtier_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div class="d-flex">
        <table class="table table-hover table-sm caption-top">
            <caption>
                {% if revenucourtiers|length == 0 %}
                    {{ "revenucourtier_filter_result_empty" | trans }}
                {% else %}
                    {{ "revenucourtier_filter_result_elements" | trans({
                        ':number': revenucourtiers|length
                    })}}
                {% endif %}
                <div class="d-flex gap-1">
                    {{ knp_pagination_render(revenucourtiers) }}
                </div>
            </caption>
            {% if revenucourtiers|length != 0 %}
                <thead class="table-light">
                    <tr>
                        {# <th scope="col"><div class='d-flex justify-content-start'>Code</div></th> #}
                        <th scope="col"><div class='d-flex justify-content-start'>{{ "revenucourtier_list_title" | trans }}</div></th>
                        <th scope="col" style="width:100px" ><div class='d-flex justify-content-end'>{{ "revenucourtier_list_actions" | trans }}</div></th>
                    </tr>
                </thead>
                <tbody class="table-group-divider">
                    {# Boucler les donnees #}
                    {% for revenucourtier in revenucourtiers %}
                        <tr id="row_revenucourtier_{{ revenucourtier.id }}">
                            <td>
                                <a class="m-2 fw-bold" href="{{ path('admin.revenucourtier.edit', {'idRevenucourtier':revenucourtier.id, 'idEntreprise': entreprise.id})}}">
                                    {% if constante.RevenuPourCourtier_isBound(revenucourtier) %}
                                        (bound)
                                    {% endif %}
                                    {{ revenucourtier.nom }} • {{ revenucourtier.typeRevenu.nom }} • dû(e) par {{ constante.Revenu_getNomPayable(revenucourtier) }}  
                                     • {{ revenucourtier.cotation.tranches|length }} Tranches               
                                </a><br/>
                                {# Section commissions #}
                                <small class="m-2">
                                    <span class="text-secondary">Com. pure: {{ constante.Revenu_getMontant_pure(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    <span class="text-secondary"> • Com. ht: {{ constante.Revenu_getMontant_ht(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    <span class="text-secondary fw-bold"> • C. totale: {{ constante.Revenu_getMontant_ttc(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    <span class="text-secondary"> • Payée: {{ constante.Revenu_getMontant_ttc_collecte(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    {% set couleur = "text-secondary" %}
                                    {% if constante.Revenu_getMontant_ttc_solde(revenucourtier) != 0 %}
                                        {% set couleur = "text-danger" %}
                                    {% endif %}
                                    <span class="{{couleur}}"> • Solde: {{ constante.Revenu_getMontant_ttc_solde(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                </small><br/>
                                {% for taxe in serviceTaxe.taxes %}
                                     {% if taxe.redevable == 0 %}
                                        {# Section Taxes : TVA#}
                                        <small class="m-2">
                                            <span class="text-secondary">{{ taxe.code }}: {{ constante.Revenu_getMontant_taxe_payable_par_assureur(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            <span class="text-secondary"> • {{ taxe.code }} payée: {{ constante.Revenu_getMontant_taxe_payable_par_assureur_payee(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            {% set couleur = "text-secondary" %}
                                            {% if constante.Revenu_getMontant_taxe_payable_par_assureur_solde(revenucourtier) != 0 %}
                                                {% set couleur = "text-danger" %}
                                            {% endif %}
                                            <span class="{{couleur}}"> • Solde: {{ constante.Revenu_getMontant_taxe_payable_par_assureur_solde(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        </small><br/>
                                     {% endif %}
                                     {% if taxe.redevable == 1 %}
                                        {# Section Taxe: ARCA #}
                                        <small class="m-2">
                                            <span class="text-secondary">{{ taxe.code }}: {{ constante.Revenu_getMontant_taxe_payable_par_courtier(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            {# <span class="text-secondary"> • {{ taxe.code }} payée: {{ constante.Revenu_getMontant_taxe_payable_par_courtier_payee(revenucourtier)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span>  #}
                                            {# {% set couleur = "text-secondary" %} #}
                                            {# {% if constante.Tranche_getMontant_taxe_payable_par_courtier_solde(tranche) != 0 %} #}
                                                {# {% set couleur = "text-danger" %} #}
                                            {# {% endif %} #}
                                            {# <span class="{{couleur}}"> • Solde dû: {{ constante.Tranche_getMontant_taxe_payable_par_courtier_solde(tranche)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span>  #}
                                        </small><br/>
                                     {% endif %}
                                {% endfor %}
                                {# {% if constante.Tranche_getPartenaire(tranche) %} #}
                                    {# Retro-commission #}
                                    {# <small class="m-2">
                                        <span class="text-secondary">Rétro-com dûe à {{ constante.Tranche_getPartenaire(tranche) }}: {{ constante.Tranche_getMontant_retrocommissions_payable_par_courtier(tranche)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • Rétro-com payée: {{ constante.Tranche_getMontant_retrocommissions_payable_par_courtier_payee(tranche)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        {% set couleur = "text-secondary" %}
										{% if constante.Tranche_getMontant_retrocommissions_payable_par_courtier_solde(tranche) != 0 %}
                                    		{% set couleur = "text-danger" %}
										{% endif %}
										<span class="{{couleur}}"> • Solde dû: {{ constante.Tranche_getMontant_retrocommissions_payable_par_courtier_solde(tranche)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span>
                                        {% if constante.Tranche_hasConditionsSpeciales(tranche) %}
                                            <span class="text-secondary fw-bold"> | Conditions spéciales (taux:{{ constante.Tranche_getTauxConditionsSpecialePiste(tranche) }}).</span>
                                        {% endif %}
                                    </small><br> #}
                                {# {% endif %} #}
                                <small class="m-2">
                                    <span class="text-secondary">Proposition: {{ revenucourtier.cotation.nom }} • {{ revenucourtier.cotation.piste.client }} • {{ revenucourtier.cotation.piste.risque }} • {{ revenucourtier.cotation.assureur }}</span> 
                                </small><br>
                                <small class="m-2">
                                    <span class="text-secondary">Piste: {{ revenucourtier.cotation.piste }}</span> 
                                </small>
                            </td>








                            <td>
                                <div class="d-flex gap-1 d-flex justify-content-end">
                                    {# Les actions sur l element de la liste #}
                                    <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.revenucourtier.edit', {'idEntreprise': entreprise.id, 'idRevenucourtier':revenucourtier.id })}}" class="" mthod = 'POST'>
                                        {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                        {# Modifier #}
                                    </a>
                                    <form action="{{ path('admin.revenucourtier.remove', {'idRevenucourtier':revenucourtier.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                        <input type='hidden' name='_method' value='DELETE'>
                                        <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                            {{ ux_icon('fluent:delete-20-filled', {height: '18px', width: '18px'}) }}
                                            {# Supprimer #}
                                        </button>
                                    </form>
                                    {# <div class="dropdown">
                                        <a class="btn btn-outline-secondary dropdown-toggle border-0 btn-sm" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            {{ ux_icon('gravity-ui:dots-9', {height: '18px', width: '18px'}) }}
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                                    {{ "revenucourtier_item_set_as_display_revenucourtier" | trans }}
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                                    {{ "revenucourtier_item_set_as_input_revenucourtier" | trans }}
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="#">
                                                    {{ ux_icon('tabler:edit', {height: '18px', width: '18px'}) }}
                                                    {{ "revenucourtier_item_set_as_display_and_input_revenucourtier" | trans }}
                                                </a>
                                            </li>
                                        </ul>
                                    </div> #}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            {% endif %}
        </table>
    </div>
{% endblock %}
