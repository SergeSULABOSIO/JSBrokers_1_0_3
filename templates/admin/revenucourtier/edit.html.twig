{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "revenucourtier_form_description" | trans({
		":user": utilisateur.nom, 
		":revenucourtier": revenucourtier.nom, 
	}) | raw }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	{# {{ form(form) }} #}
	{{ form_start(form, {
		'attr': {
			'data-controller': 'revenu-formulaire', 
			'data-revenu-formulaire-idrevenu-value': revenucourtier.id,
			'data-revenu-formulaire-identreprise-value': entreprise.id,
			}
		}) }}
	<div class="d-flex shadow-sm card bg-body sensible bg-white">
		<div class="card-body">
			<div>
				<div class="row">
					<div class="col">
						{{ form_row(form.nom, {'attr': {'data-revenu-formulaire-target': 'nom'}}) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.typerevenu) }}
					</div>
					<div class="col">
						{{ form_row(form.tauxExceptionel) }}
					</div>
					<div class="col">
						{{ form_row(form.montantFlatExceptionel) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_widget(form.enregistrer, {
								'attr': {
									'data-revenu-formulaire-target': 'btEnregistrer'
									}
								}) 
							}}
					</div>
				</div>
			</div>
			<small>
				<span class="text-secondary m-2 fw-bold" data-revenu-formulaire-target="display" style="display:block;">Message d'infos ici</span>
			</small>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
