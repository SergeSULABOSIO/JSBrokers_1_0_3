{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "partenaire_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div>
		<div class="d-flex shadow-sm sensible bg-white">
			<table class="table table-hover table-sm caption-top p-3">
				<caption>
                    {% if partenaires|length == 0 %}
                        {{ "list_filter_result_empty" | trans }}
                    {% else %}
                        {{ "list_filter_result_elements" | trans({
                            ':number': partenaires|length
                        })}}
                    {% endif %}
                    <div class="d-flex gap-1">
                        {{ knp_pagination_render(partenaires) }}
                    </div>
                </caption>
                {% if partenaires|length != 0 %}
                    <thead class="table-light">
						<tr>
							<th scope="col">
								<div class='d-flex justify-content-start text-secondary'>
									{{ "list_of_object" | trans }}
								</div>
							</th>
							<th scope="col" style="width:100px" >
								<div class='d-flex justify-content-end'>
									{# {{ "note_list_actions" | trans }} #}
								</div>
							</th>
						</tr>
					</thead>
                    <tbody class="table-group-divider">
                        {# Boucler les donnees #}
                        {% for partenaire in partenaires %}
                            <tr id="row_partenaire_{{ partenaire.id }}" class="element-a-encadrer parent-a-options">
                                <td>
                                    <a class="m-2 fw-bold" href="{{ path('admin.partenaire.edit', {'idPartenaire':partenaire.id, 'idEntreprise': entreprise.id})}}">
                                        {{ include('segments/icones/partenaire.html.twig', {size:'18px'}) }}
                                        {{ partenaire.nom }}
                                        {% if partenaire.conditionPartages|length != 0 %}
                                            • {{partenaire.conditionPartages|length}} Condition(s)
                                        {% endif %}
                                        {% if partenaire.part != 0 %}
                                            • {{ partenaire.part * 100 }}% de l'assiette.
                                        {% endif %}
                                    </a><br/>
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/actions/description.html.twig', {size:'16px'}) }}
                                            {{ partenaire.telephone }} •  {{ partenaire.email }} • {{ partenaire.adressePhysique }}
                                        </span>
                                        <span class="text-secondary"> •  RCCM: {{ partenaire.rccm }} • NIF: {{ partenaire.numimpot }} • IDNAT: {{ partenaire.idnat }}</span> 
                                    </small><br/>
                                    {# Section prime #}
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/cotation.html.twig', {size:'16px'}) }}
                                            Prime: {{ constante.Partenaire_getMontant_prime_payable_par_client(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                        <span class="text-secondary"> • Prime payée: {{ constante.Partenaire_getMontant_prime_payable_par_client_payee(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        {% set couleur = "text-secondary" %}
                                        {% if constante.Partenaire_getMontant_prime_payable_par_client_solde(partenaire) != 0 %}
                                            {% set couleur = "text-danger" %}
                                        {% endif %}
                                        <span class="{{couleur}}"> • Solde dû: {{ constante.Partenaire_getMontant_prime_payable_par_client_solde(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    </small><br/>
                                    {# Section commissions #}
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/revenu.html.twig', {size:'16px'}) }}
                                            Com. pure: {{ constante.Partenaire_getMontant_commission_pure(partenaire, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                        <span class="text-secondary"> • Ht: {{ constante.Partenaire_getMontant_commission_ht(partenaire, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • Totale: {{ constante.Partenaire_getMontant_commission_ttc(partenaire, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        <span class="text-secondary"> • Collectée: {{ constante.Partenaire_getMontant_commission_ttc_collectee(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                        {% set couleur = "text-secondary" %}
                                        {% if constante.Partenaire_getMontant_commission_ttc_solde(partenaire, -1, false) != 0 %}
                                            {% set couleur = "text-danger" %}
                                        {% endif %}
                                        <span class="{{couleur}}"> • Solde: {{ constante.Partenaire_getMontant_commission_ttc_solde(partenaire, -1, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                    </small><br/>
                                    {# La reserve du courtier = ce qui revient au courtier après avoir payé tous les partenaires #}
                                    <small class="m-2">
                                        <span class="text-secondary">
                                            {{ include('segments/icones/revenu.html.twig', {size:'16px'}) }}
                                            La réserve finale pour {{ entreprise.nom }} est de {{ constante.Partenaire_getReserve(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                        </span> 
                                    </small><br>
                                    {% for taxe in serviceTaxe.taxes %}
                                        {% if taxe.redevable == 0 %}
                                            {# Section Taxes : TVA#}
                                            <small class="m-2">
                                                <span class="text-secondary">
                                                    {{ include('segments/icones/taxe.html.twig', {size:'16px'}) }}
                                                    {{ taxe.code }}: {{ constante.Partenaire_getMontant_taxe_payable_par_assureur(partenaire, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                                <span class="text-secondary"> • {{ taxe.code }} payée: {{ constante.Partenaire_getMontant_taxe_payable_par_assureur_payee(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                                {% set couleur = "text-secondary" %}
                                                {% if constante.Partenaire_getMontant_taxe_payable_par_assureur_solde(partenaire, false) != 0 %}
                                                    {% set couleur = "text-danger" %}
                                                {% endif %}
                                                <span class="{{couleur}}"> • Solde: {{ constante.Partenaire_getMontant_taxe_payable_par_assureur_solde(partenaire, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            </small><br/>
                                        {% endif %}
                                        {% if taxe.redevable == 1 %}
                                            {# Section Taxe: ARCA #}
                                            <small class="m-2">
                                                <span class="text-secondary">
                                                    {{ include('segments/icones/taxe.html.twig', {size:'16px'}) }}
                                                    {{ taxe.code }}: {{ constante.Partenaire_getMontant_taxe_payable_par_courtier(partenaire, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                                </span> 
                                                <span class="text-secondary"> • {{ taxe.code }} payée: {{ constante.Partenaire_getMontant_taxe_payable_par_courtier_payee(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                                {% set couleur = "text-secondary" %}
                                                {% if constante.Partenaire_getMontant_taxe_payable_par_courtier_solde(partenaire, false) != 0 %}
                                                    {% set couleur = "text-danger" %}
                                                {% endif %}
                                                <span class="{{couleur}}"> • Solde dû: {{ constante.Partenaire_getMontant_taxe_payable_par_courtier_solde(partenaire, false)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            </small><br/>
                                        {% endif %}
                                    {% endfor %}
                                    {# Retro-commission #}
                                    {% if constante.Partenaire_getMontant_commission_pure(partenaire, -1, true) != 0 %}
                                        <small class="m-2">
                                            <span class="text-secondary">
                                                {{ include('segments/icones/partenaire.html.twig', {size:'16px'}) }}
                                                Assiette: {{ constante.Partenaire_getMontant_commission_pure(partenaire, -1, true)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}
                                            </span> 
                                            <span class="text-secondary fw-bold"> • Rétro-com {{ partenaire.nom }}: {{ constante.Partenaire_getMontant_retrocommissions_payable_par_courtier(partenaire, -1, true)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            <span class="text-secondary fw-bold"> • Payée: {{ constante.Partenaire_getMontant_retrocommissions_payable_par_courtier_payee(partenaire)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span> 
                                            {% set couleur = "text-secondary" %}
                                            {% if constante.Partenaire_getMontant_retrocommissions_payable_par_courtier_solde(partenaire, -1, true) != 0 %}
                                                {% set couleur = "text-danger" %}
                                            {% endif %}
                                            <span class="{{couleur}} fw-bold"> • Solde dû: {{ constante.Partenaire_getMontant_retrocommissions_payable_par_courtier_solde(partenaire, -1, true)|format_currency(serviceMonnaie.codeMonnaieAffichage, locale: utilisateur.locale) }}</span>
                                        </small><br>
                                        {% if constante.Partenaire_hasConditionsSpeciales(partenaire) %}
                                            <small class="m-2">
                                                {% for condition in constante.Partenaire_getDescriptionsConditionSpecialePartage(partenaire) %}
                                                    <span class="text-danger">
                                                        {{ include('segments/icones/partenaire.html.twig', {size:'16px'}) }}
                                                        {{ condition }}
                                                    </span>
                                                {% endfor %}
                                            </small><br>
                                        {% endif %}
                                    {% endif %}
                                </td>
                                <td>
                                    <div class="options-du-parent">
                                        <div class="d-flex gap-1 d-flex justify-content-end">
                                            {# Les actions sur l element de la liste #}
                                            <a class= "btn btn-outline-primary btn-sm border-0" href="{{ path('admin.partenaire.edit', {'idEntreprise': entreprise.id, 'idPartenaire':partenaire.id })}}" class="" mthod = 'POST'>
                                                {{ include('segments/icones/actions/edit.html.twig', {size:'18px'}) }}
												{# Modifier #}
                                            </a>
                                            <form action="{{ path('admin.partenaire.remove', {'idPartenaire':partenaire.id, 'idEntreprise': entreprise.id})}}" method='POST'>
                                                <input type='hidden' name='_method' value='DELETE'>
                                                <button class='btn btn-outline-danger border-0 btn-sm' type='submit'>
                                                    {{ include('segments/icones/actions/delete.html.twig', {size:'18px'}) }}
													{# Supprimer #}
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                {% endif %}
            </table>
        </div>
    </div>
{% endblock %}
