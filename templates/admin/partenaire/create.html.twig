{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "partenaire_creation_description_message" | trans({
		":user": utilisateur.nom, 
		":company": entreprise.nom, 
	}) | raw}}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	{# {{ form(form) }} #}
	{{ form_start(form) }}
	<div class="d-flex shadow-sm card bg-body sensible bg-white">
		<div class="card-body">
			<div>
				<div class="row">
					<div class="col-8">
						{{ form_row(form.nom) }}
					</div>
					<div class="col-4">
						{{ form_row(form.adressePhysique) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.telephone) }}
					</div>
					<div class="col">
						{{ form_row(form.email) }}
					</div>
					<div class="col">
						{{ form_row(form.numimpot) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.idnat) }}
					</div>
					<div class="col">
						{{ form_row(form.rccm) }}
					</div>
					<div class="col">
						{{ form_row(form.part) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.conditionPartages) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_row(form.documents) }}
					</div>
				</div>
				<div class="row">
					<div class="col">
						{{ form_widget(form.enregistrer) }}
					</div>
				</div>
			</div>
		</div>
	</div>
	{{ form_end(form) }}
{% endblock %}
