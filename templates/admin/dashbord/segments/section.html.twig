                                        {% if reposertSet.type == 2 %}
                                            <th scope="col"><small>{{ reposertSet.label }}</small></th>
                                            <th scope="col" class="text-end" style="color: #0d6efd;"><small>{{ reposertSet.gw_premium|number_format(2, ',', ' ') ~ " " ~ reposertSet.currency_code }}</small></th>
