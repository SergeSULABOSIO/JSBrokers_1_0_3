                        <strong>{{ ux_icon('game-icons:receive-money', {height: '20px', width: '20px'}) }} Cash-flow</strong>
                    </button>
                </div>
            </nav>
            {# Contenu de chaque Onglet #}
            <div class="tab-content" id="nav-tabContent">
