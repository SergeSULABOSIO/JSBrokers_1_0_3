                    <div class="card m-2">
                        <div class="card-header text-center">
                            Daily tasks / todo-list of the day
                        </div>
                        {# Tableau de taches par utilisateur #}
                        <table class="table table-hover table-sm">
                            <caption class="text-center">Quelques explications en bas du tableau ici.</caption>
                            <thead class="table-secondary">
                                <tr>
                                    <th scope="col" width="300">TASK TO BE EXECUTED</th>
                                    <th scope="col" width="170">CLIENT</th>
                                    <th scope="col" width="150">EXCUTOR</th>
                                    <th scope="col" width="150">DATE PLANNED</th>
                                    <th scope="col" class="text-end">&nbsp;&nbsp;&nbsp;&nbsp;PREMIUM</th>
                                    <th scope="col" class="text-end">&nbsp;&nbsp;&nbsp;&nbsp;REVENUE</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for reposertSet in productionTabs['tabTasks'] %}
                                    {% if reposertSet.type == 1 %}
                                        <tr>
                                            <td>
                                                <small>
                                                    <a href="#" class="text-dark" style="text-decoration: none;">{{ reposertSet.task_description|raw }}</a></br>
                                                    <span class="text-muted">
                                                        <ul>
                                                            <li>By <a href="#" class="link-secondary">{{ reposertSet.owner.nom }}</a></li>
                                                            <li>Lead: <a href="#" class="link-secondary">Police Motor TPL pour agents</a></li>
                                                            <li>End.: {{ reposertSet.endorsement }} </li>
                                                        </ul>
                                                    </span>
                                                </small>
                                            </td>
                                            <td>
                                                <small>
                                                    {{ reposertSet.client }}
                                                    <span class="text-muted">
                                                        Contacts:</br>
                                                        <ul>
                                                            {% for contact in reposertSet.contacts %}
                                                                <li>{{ contact }}</li>
                                                            {% endfor %}
                                                        </ul>
                                                    </span>
                                                </small>
                                            </td>
                                            {# <td><small>{{ reposertSet.owner.nom }}</small></td> #}
                                            <td>
                                                <small>
                                                    {{ reposertSet.excutor.nom }}</br>
                                                    <span class="text-muted">Feedbacks (10)</span>
                                                </small>
                                            </td>
                                            <td>
                                                <small>
                                                    <strong>
                                                        {{ reposertSet.effect_date|format_date("full", locale: app.user.locale) }}<br>
                                                    </strong>
                                                    {% set couleur = "text-dark" %}
                                                    {% if reposertSet.days_passed == 0 %}
                                                        <span class="p-1 rounded text-bg-primary">Today.</span>
                                                    {% endif %}
                                                    {% if reposertSet.days_passed < 0 %}
                                                        <span class="p-1 rounded text-bg-success">In {{ reposertSet.days_passed * (-1) }} days.</span>
                                                    {% endif %}
                                                    {% if reposertSet.days_passed > 0 %}
                                                        <span class="p-1 rounded text-bg-danger">Since {{ reposertSet.days_passed }} days.</span>
                                                    {% endif %}
                                                </small>
                                            </td>
