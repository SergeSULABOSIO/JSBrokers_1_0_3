{# Une brique est element html de la classe COL #}
<div class="col-md border border-0 border-secondary rounded-3 shadow-sm bg-white">
    {# Le filtre sera ici {{ data }} #}
    {{ form_start(formulaire_recherche) }}
        <div class="input-group input-group-lg mt-2">
            <span class="input-group-text" id="basic-addon1">{{ ux_icon('lucide:search', {height: '16px', width: '16px'}) }}</span>
            {{ form_widget(formulaire_recherche.entreprises) }}
            {{ form_widget(formulaire_recherche.chercher) }}
        </div>
        {# Formulaire avanc√© #}
        <div class="accordion accordion-flush m-0 mb-2" id="accordionFlushExample">
            <div class="accordion-item">
                <span class="accordion-header" id="flush-headingOne">
                    <a href="#" style="text-decoration: none;" class="accordion-button collapsed text-secondary p-2 m-1 rounded" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
                        {{ ux_icon('rivet-icons:filter-solid', {height: '16px', width: '16px'}) }}
                        &nbsp;&nbsp;{{ "company_dashboard_search_advanced_filter_link" | trans() | raw }}
                        {% if nbFiltresAvancesActif != 0 %}
                            &nbsp;&nbsp;
                            <span class="badge rounded-pill position-relative text-bg-secondary">
                                {{ "company_dashboard_search_advanced_filter_activated" | trans() | raw }}
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill text-bg-warning">
                                    {{ nbFiltresAvancesActif }}
                                </span>
                            </span>
                        {% endif %}
                    </a>
                </span>
                <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="flush-headingOne" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body p-2">
                        <div class="input-group input-group-sm m-1">
                            <span class="input-group-text">{{ "company_dashboard_search_form_date_from" | trans() | raw }}</span>
                            {{ form_widget(formulaire_recherche.dateDebut) }}
                            <span class="input-group-text">{{ "company_dashboard_search_form_date_to" | trans() | raw }}</span>
                            {{ form_widget(formulaire_recherche.dateFin) }}
                        </div>
                        <div class="input-group input-group-sm m-1">
                            <span class="input-group-text" id="inputGroup-sizing-a">
                                {{ "company_dashboard_search_form_assureurs" | trans() | raw }}
                            </span>
                            {{ form_widget(formulaire_recherche.assureurs) }}
                        </div>
                        <div class="input-group input-group-sm m-1">
                            <span class="input-group-text">
                                {{ "company_dashboard_search_form_produits" | trans() | raw }}
                            </span>
                            {{ form_widget(formulaire_recherche.produits) }}
                        </div>
                        <div class="input-group input-group-sm m-1">
                            <span class="input-group-text">
                                {{ "company_dashboard_search_form_partenaires" | trans() | raw }}
                            </span>
                            {{ form_widget(formulaire_recherche.partenaires) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(formulaire_recherche) }}
</div>