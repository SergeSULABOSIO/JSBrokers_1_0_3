{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{% block section_utilisateur %}
	{% include 'segments/boutons_entreprise_dashbord.html.twig' %}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	Aperçu global de la situation de {{ entreprise.nom }}. Tableau de bord avec indicateurs clés de gestion.
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{# Block #}
			<div class="sensible col-md border border-2 border-secondary rounded-3 m-1 p-2">
				<div class="row g-1">
					<div class="col-md-2 rounded-4 m-2 mt-4 mb-4 text-secondary">
						{{ ux_icon('material-symbols:finance-mode', {height: '50px', width: '50px'}) }} 
					</div>
					<div class="col-md m-1">
						<div class="d-flex justify-content-between border border-top-0 border-end-0 border-start-0 border-secondary">
							<strong>GW Premium:</strong>
							<strong>$100.000,45</strong>
						</div>
						<div class="d-flex justify-content-between text-secondary">
							<small>Net Premium:</small>
							<small>$100.000,45</small>
						</div>
						<div class="d-flex justify-content-between text-secondary">
							<small>Fronting:</small>
							<small>$100.000,45</small>
						</div>
						<div class="d-flex justify-content-between text-secondary">
							<small>Vat:</small>
							<small>$100.000,45</small>
						</div>
					</div>
				</div>
			</div>
			{# Block #}
			<div class="sensible col-md border border-lightgrey rounded-3 m-1 p-1">
				Column
			</div>
			{# Block #}
			<div class="sensible col-md border border-lightgrey rounded-3 m-1 p-1">
				Column
			</div>
		</div>
	</div>
	{{ render_chart(chart, {'class': 'my-chart'}) }}
{% endblock %}
