{% extends 'base.html.twig' %}

{% block title %}
	{{pageName}}
{% endblock %}

{%  block titreRubrique %}
	{{ utilisateur.nom }}>{{ entreprise.nom }}><strong>{{ pageName }}</strong>
{% endblock %}

{% block descriptionRubrique %}
	{{ "avenant_description" | trans }}
{% endblock %}

{% block menuLateraleGauche %}
	{% include 'segments/menu_entreprise_dashbord.html.twig' %}
{% endblock %}

{% block body %}
	<div class="container">
		{# {{ form(form) }} #}
		<div class="card shadow-sm bg-body" style="width: 40rem;">
			<div class="card-body">
				<p>
					{{ "avenant_form_description" | trans({
						":user": utilisateur.nom, 
						":avenant": avenant.referencePolice, 
					}) | raw }}
				</p>
				<div class = "m-2">
					{{ form(form, {action: path('admin.avenant.edit', {
						idEntreprise:entreprise.id,
						idAvenant:avenant.id
						})}) 
					}}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
