{# templates/components/_totals_bar.html.twig #}
 <div
     data-controller="totals-bar"
     class="d-flex align-items-center justify-content-between mb-0 mt-2"
 >
     {# Sous-ensemble 1: Choix de l'attribut (inchangé) #}
     <div class="d-flex align-items-center">
         <label for="attribute-select" class="form-label me-2 mb-0 small" style="color: gray;">Totaliser :</label>
         <select
             class="form-select form-select-sm text-secondary text-muted small"
             id="attribute-select"
             style="width: auto;"
             data-action="totals-bar#recalculate"
             data-totals-bar-target="attributeSelector"
         >
            {# Boucle pour générer les options dynamiquement #}
            {% for key, label in numericAttributes %}
                <option value="{{ key }}" {{ loop.first ? 'selected' : '' }}>
                    {{ label }}
                </option>
            {% endfor %}
         </select>
     </div>
 
     {# Sous-ensemble 2: Total Global (modifié) #}
     <div class="d-flex align-items-center gap-2">
         <span class="text-muted small">Total Global:</span>
         <span
             class="small fw-bolder"
             data-totals-bar-target="globalTotal"
             style="color: #6c757d;"
         >
            0,00 $
         </span>
     </div>
 
     {# Sous-ensemble 3: Total de la Sélection (modifié) #}
     <div class="d-flex align-items-center gap-2">
         <span class="text-muted small">Total Sélection:</span>
         <span
             class="small fw-bold"
             data-totals-bar-target="selectionTotal"
             style="color: #6c757d;"
         >
            0,00 $
         </span>
     </div>
 </div>