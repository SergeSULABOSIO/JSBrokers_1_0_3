{# templates/components/_totals_bar.html.twig #}
 <div
     data-controller="totals-bar"
     class="d-flex align-items-center justify-content-between p-2 mb-4 border-bottom"
     style="background-color: #f8f9fa; --bs-border-opacity: .15;"
 >
     {# Sous-ensemble 1: Choix de l'attribut (inchangé) #}
     <div class="d-flex align-items-center">
         <label for="attribute-select" class="form-label me-2 mb-0 fw-bold" style="color: #212529;">Totaliser :</label>
         <select
             class="form-select form-select-sm"
             id="attribute-select"
             style="width: auto;"
             data-action="totals-bar#recalculate"
             data-totals-bar-target="attributeSelector"
         >
             <option value="amountInvoiced" selected>Montant Facturé</option>
             <option value="amountPaid">Montant Payé</option>
             <option value="balance">Solde Restant</option>
         </select>
     </div>
 
     {# Sous-ensemble 2: Total Global (modifié) #}
     <div class="d-flex align-items-center gap-2">
         <span class="text-muted small text-uppercase">Total Global:</span>
         <span
             class="small fw-bolder"
             data-totals-bar-target="globalTotal"
             style="color: #212529;"
         >
             Calcul...
         </span>
     </div>
 
     {# Sous-ensemble 3: Total de la Sélection (modifié) #}
     <div class="d-flex align-items-center gap-2">
         <span class="text-muted small text-uppercase">Total Sélection:</span>
         <span
             class="small fw-bold"
             data-totals-bar-target="selectionTotal"
             style="color: #6c757d;"
         >
             0,00 €
         </span>
     </div>
 </div>