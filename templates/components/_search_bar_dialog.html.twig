<div 
    class="modal fade app-dialog" 
    data-controller="search-bar-dialog"
    data-search-bar-dialog-target="advancedSearchModal"
    tabindex="-1"
    data-bs-backdrop="static"
    data-bs-keyboard="false"
>
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title d-flex align-items-center">
                    <twig:ux:icon name="lucide:sliders-horizontal" class="me-2" style="width: 24px; height: 24px;" />
                    Recherche Avancée
                </h5>
                <button type="button" class="btn-close btn-close-white" data-action="click->search-bar-dialog#cancel" aria-label="Close"></button>
            </div>
            <div class="modal-body bg-white">
                <form>
                    <div data-search-bar-dialog-target="advancedFormContainer" class="form-scrollable-content"></div>
                    <div class="d-flex justify-content-end mt-4 border-top pt-3">
                        <button type="button" class="btn btn-secondary me-2" data-action="click->search-bar-dialog#resetForm">
                            <twig:ux:icon name="lucide:rotate-cw" class="me-1" style="width: 22px; height: 22px;" />
                            Réinitialiser
                        </button>
                        <button type="button" class="btn btn-primary" data-action="click->search-bar-dialog#submitAdvancedSearch">
                            <twig:ux:icon name="lucide:search" class="me-1" style="width: 22px; height: 22px;" />
                            Rechercher
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>